      <span class="rounded-full bg-blue-500 opacity-30 w-6 h-6 block"></span>
    </div>
  </div>

  <script>
    // Simple fade-in for each section-card
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('.section-card').forEach(function(el, idx) {
        el.style.opacity = 0;
        el.style.transform = 'translateY(30px)';
        setTimeout(function() {
          el.style.transition = 'opacity 0.8s cubic-bezier(.68,.18,.21,.9),transform 0.8s';
          el.style.opacity = 1;
          el.style.transform = 'translateY(0)';
        }, 200 + idx * 120);
      });
    });
  </script>
  <% if (typeof loadingScreen !== "undefined") { %>
    <%- loadingCss %>
    <%- loadingScreen %>
    <%- loadingJs %>
    <% } %>
</body>
</html>

