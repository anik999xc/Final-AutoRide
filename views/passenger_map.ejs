            text-align: center;
            box-shadow: var(--shadow-xl);
        }

        .toast.success {
            background: var(--success-color);
        }

        .toast.warning {
            background: var(--warning-color);
        }

        .toast.error {
            background: var(--danger-color);
        }

        .toast.show {
            opacity: 1;
            transform: translateX(-50%) translateY(0);
        }

