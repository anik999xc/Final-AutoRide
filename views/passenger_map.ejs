    <script>
        // Global variables
        let socket;
        let map;
        let currentLocation = null;
        let pickupMarker, dropMarker, driverMarker;
        let rideData = null;
        let timerInterval = null;
        let rideId = null;
        let acceptedDriver = null;
        let currentOtp = null;

        // FIXED: Enhanced ride data initialization with proper error handling
        function initRideData() {
            try {
                // Get ride data from the script tag
                const rideDataScript = document.getElementById('rideDataScript');
                if (rideDataScript && rideDataScript.textContent) {
                    rideData = JSON.parse(rideDataScript.textContent);
                    console.log('Ride data loaded from script:', rideData);
                } else {
                    throw new Error('No ride data script found');
                }

                // Validate ride data structure
                if (!rideData || !rideData.pickup || !rideData.drop) {
                    throw new Error('Invalid ride data structure');
                }

                // Validate coordinates
                if (!rideData.pickup.lat || !rideData.pickup.lng || 
                    !rideData.drop.lat || !rideData.drop.lng) {
                    throw new Error('Missing coordinate data');
                }

                console.log('‚úÖ Ride data validation successful:', rideData);
                return true;

            } catch (error) {
                console.error('‚ùå Error loading ride data:', error);
                
                // Show error to user
                showError('Failed to load ride information. Please try again.');
                
                // Fallback data for development/testing
                rideData = {
                    id: 'fallback_' + Date.now(),
                    pickup: { 
                        name: "Current Location", 
                        lat: 23.8103, 
                        lng: 90.4125 
                    },
                    drop: { 
                        name: "Destination", 
                        lat: 23.8203, 
                        lng: 90.4225 
                    },
                    distance: "1.5",
                    estimatedDuration: 5,
                    estimatedFare: 25
                };
                
                console.log('üîÑ Using fallback ride data:', rideData);
                return false;
            }
        }

        // FIXED: Enhanced map initialization with proper error handling
        function initMap() {
            try {
                // Validate ride data first
                if (!rideData || !rideData.pickup || !rideData.drop) {
                    throw new Error('Ride data not available for map initialization');
                }

                // Validate coordinates
                if (!rideData.pickup.lat || !rideData.pickup.lng || 
                    !rideData.drop.lat || !rideData.drop.lng) {
                    throw new Error('Invalid coordinates in ride data');
                }

                const pCoords = [rideData.pickup.lat, rideData.pickup.lng];
                const dCoords = [rideData.drop.lat, rideData.drop.lng];

                console.log('üó∫Ô∏è Initializing map with coordinates:', { pickup: pCoords, drop: dCoords });

                // Initialize Leaflet map
                map = L.map('map', {
                    zoomControl: true,
                    scrollWheelZoom: true,
                    dragging: true,
                    tap: true,
                    touchZoom: true
                }).setView(pCoords, 13);

                // Add map tiles
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '¬© OpenStreetMap contributors',
                    maxZoom: 18,
                    tileSize: 256,
                    zoomOffset: 0
                }).addTo(map);

                // Enhanced pickup marker
                const pickupIcon = L.divIcon({
                    html: '<div class="custom-marker pickup-marker"><i class="fas fa-user"></i></div>',
                    iconSize: [32, 32],
                    iconAnchor: [16, 16],
                    className: 'custom-marker-container'
                });

                pickupMarker = L.marker(pCoords, { icon: pickupIcon })
                    .addTo(map)
                    .bindPopup(`<b>üìç Pickup</b><br>${rideData.pickup.name}`, {
                        className: 'custom-popup'
                    });

                // Enhanced drop marker
                const dropIcon = L.divIcon({
                    html: '<div class="custom-marker drop-marker"><i class="fas fa-map-marker-alt"></i></div>',
                    iconSize: [32, 32],
                    iconAnchor: [16, 16],
                    className: 'custom-marker-container'
                });

                dropMarker = L.marker(dCoords, { icon: dropIcon })
                    .addTo(map)
                    .bindPopup(`<b>üéØ Destination</b><br>${rideData.drop.name}`, {
                        className: 'custom-popup'
                    });

                // Draw route line
                const routeLine = L.polyline([pCoords, dCoords], {
                    color: '#006aff',
                    weight: 4,
                    opacity: 0.7,
                    dashArray: '10, 10'
                }).addTo(map);

                // Fit map to show both markers
                const group = new L.featureGroup([pickupMarker, dropMarker]);
                map.fitBounds(group.getBounds().pad(0.15));

                // Update ride info
                updateRideInfo();

                console.log('‚úÖ Map initialized successfully');

            } catch (error) {
                console.error('‚ùå Map initialization error:', error);
                showError('Unable to load map. Please check your internet connection and try again.');
                
                // Show fallback UI
                document.getElementById('map').innerHTML = `
                    <div style="display: flex; align-items: center; justify-content: center; height: 100%; background: var(--gray-100); border-radius: var(--border-radius-lg);">
                        <div style="text-align: center; color: var(--gray-600);">
                            <i class="fas fa-map text-4xl mb-4 text-gray-400"></i>
                            <p style="font-size: 16px; font-weight: 600; margin-bottom: 8px;">Map Unavailable</p>
                            <p style="font-size: 14px;">Please check your connection</p>
                        </div>
                    </div>
                `;
            }
        }

        // Enhanced ride info update
        function updateRideInfo() {
            try {
                if (!rideData) return;

                // Update distance and time info
                const distanceInfo = document.getElementById("distance-info");
                if (distanceInfo) {
                    distanceInfo.classList.remove('calculating');
                    distanceInfo.innerHTML = `üïê ${rideData.distance || '0'} km ‚Ä¢ ${rideData.estimatedDuration || 0} mins`;
                }

                // Update fare display
                const fareDisplay = document.getElementById("fare-display");
                if (fareDisplay) {
                    fareDisplay.textContent = `‚Çπ${rideData.estimatedFare || 0}`;
                }

                console.log('‚úÖ Ride info updated successfully');

            } catch (error) {
                console.error('‚ùå Error updating ride info:', error);
                showToast('‚ùå Error updating ride information', 'error');
            }
        }

        // Initialize socket connection
        function initSocket() {
            try {
                socket = io();
                socket.emit('userType', 'passenger');

                // Listen for ride events
                socket.on('rideAccepted', handleRideAccepted);
                socket.on('driverLocationUpdate', handleDriverLocationUpdate);
                socket.on('rideStarted', handleRideStarted);
                socket.on('rideFinished', handleRideFinished);
                socket.on('driverArrived', handleDriverArrived);
                socket.on('rideRequestExpired', handleRideRequestExpired);

                console.log('‚úÖ Socket connection initialized');

            } catch (error) {
                console.error('‚ùå Socket initialization error:', error);
                showError('Connection error. Please refresh the page.');
            }
        }

        // Generate unique OTP for each ride
        function generateUniqueOtp() {
            return Math.floor(1000 + Math.random() * 9000).toString();
        }

        // Enhanced confirm booking with better error handling
        function confirmBooking() {
            try {
                const btn = document.getElementById('confirmBookingBtn');
                const originalHTML = btn.innerHTML;
                
                // Validate ride data before proceeding
                if (!rideData || !rideData.pickup || !rideData.drop) {
                    showToast('‚ùå Invalid ride data. Please try again.', 'error');
                    return;
                }
                
                // Add loading state
                btn.innerHTML = '<div class="loading-spinner"></div><span style="margin-left: 8px;">Finding Drivers...</span>';
                btn.disabled = true;
                
                // Generate unique ride ID and OTP
                rideId = 'ride_' + Date.now() + '_' + Math.random().toString(36).substr(2, 5);
                currentOtp = generateUniqueOtp();
                
                // Prepare ride request data
                const requestData = {
                    rideId: rideId,
                    passengerId: getPassengerId(),
                    passengerName: getPassengerName(),
                    passengerPhone: getPassengerPhone(),
                    passengerRating: 4.5,
                    pickupLat: rideData.pickup.lat,
                    pickupLng: rideData.pickup.lng,
                    pickupAddress: rideData.pickup.name,
                    dropLat: rideData.drop.lat,
                    dropLng: rideData.drop.lng,
                    dropAddress: rideData.drop.name,
                    distance: rideData.distance,
                    duration: rideData.estimatedDuration,
                    fare: rideData.estimatedFare,
                    otp: currentOtp,
                    timestamp: Date.now()
                };

                console.log('üì§ Sending ride request:', requestData);

                // Send ride request to server
                socket.emit('rideRequest', requestData);

                // Start timer modal
                startTimer();

                // Reset button after delay
                setTimeout(() => {
                    btn.innerHTML = originalHTML;
                    btn.disabled = false;
                }, 3000);

                showToast('üîç Searching for nearby drivers...', 'info');

            } catch (error) {
                console.error('‚ùå Error confirming booking:', error);
                showToast('‚ùå Failed to request ride. Please try again.', 'error');
            }
        }

        // Enhanced timer with better UX
        function startTimer() {
            document.getElementById('timerModal').classList.add('show');
            
            let timeLeft = 180; // 3 minutes
            const timerDisplay = document.getElementById('timerDisplay');
            
            timerInterval = setInterval(() => {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                timerDisplay.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
                
                // Change color as time runs out
                const timerCircle = document.querySelector('.timer-circle');
                if (timeLeft <= 30) {
                    timerCircle.style.background = 'linear-gradient(135deg, #ef4444, #dc2626)';
                } else if (timeLeft <= 60) {
                    timerCircle.style.background = 'linear-gradient(135deg, #f59e0b, #d97706)';
                }
                
                timeLeft--;
                
                if (timeLeft < 0) {
                    clearInterval(timerInterval);
                    handleTimerExpired();
                }
            }, 1000);
        }

        // Handle timer expired
        function handleTimerExpired() {
            document.getElementById('timerModal').classList.remove('show');
            showToast('‚è∞ No drivers available right now. Please try again.', 'warning');
        }

        // Handle ride request expired
        function handleRideRequestExpired(data) {
            if (data.rideId === rideId) {
                document.getElementById('timerModal').classList.remove('show');
                showToast('‚è∞ Ride request expired. Please try booking again.', 'warning');
            }
        }

        // Enhanced ride accepted handler
        function handleRideAccepted(data) {
            if (data.rideId !== rideId) return;

            clearInterval(timerInterval);
            acceptedDriver = data.driver;

            // Hide timer modal
            document.getElementById('timerModal').classList.remove('show');

            // Show driver accepted modal
            document.getElementById('acceptedDriverName').textContent = data.driver.name || 'Driver';
            document.getElementById('acceptedDriverRating').textContent = data.driver.rating || '4.8';
            document.getElementById('arrivalTime').textContent = `${data.estimatedArrival || 5} mins`;
            document.getElementById('rideOtp').textContent = currentOtp;
            
            // Update driver contact info
            document.getElementById('driverPhone').innerHTML = `
                <i class="fas fa-phone"></i>
                <span>${data.driver.phone || '+880 1234-567890'}</span>
            `;
            
            // Update driver vehicle info
            document.getElementById('driverVehicle').innerHTML = `
                <i class="fas fa-motorcycle"></i>
                <span>${data.driver.vehicle || 'Honda CB 150R'}</span>
                <span>‚Ä¢</span>
                <span>${data.driver.plateNumber || 'DHK-1234'}</span>
            `;

            // Show driver accepted modal
            document.getElementById('driverAcceptedModal').classList.add('show');

            // Add driver marker to map
            addDriverMarker(data.driverLocation);

            showToast(`‚úÖ ${data.driver.name} accepted your ride!`, 'success');
            
            // Auto-hide modal after 10 seconds
            setTimeout(() => {
                document.getElementById('driverAcceptedModal').classList.remove('show');
            }, 10000);
        }

        // Add driver marker to map
        function addDriverMarker(location) {
            if (driverMarker) {
                map.removeLayer(driverMarker);
            }

            const driverIcon = L.divIcon({
                html: '<div class="custom-marker driver-marker"><i class="fas fa-motorcycle"></i></div>',
                iconSize: [36, 36],
                iconAnchor: [18, 18],
                className: 'custom-marker-container'
            });

            driverMarker = L.marker([location.latitude, location.longitude], { icon: driverIcon })
                .addTo(map)
                .bindPopup(`<b>üèçÔ∏è Your Driver</b><br>${acceptedDriver?.name || 'Driver'}`, {
                    className: 'custom-popup'
                });

            // Extend map bounds to include driver
            const group = new L.featureGroup([pickupMarker, dropMarker, driverMarker]);
            map.fitBounds(group.getBounds().pad(0.1));
        }

        // Handle real-time driver location updates
        function handleDriverLocationUpdate(data) {
            if (data.rideId !== rideId || !driverMarker) return;

            // Update marker position
            driverMarker.setLatLng([data.location.latitude, data.location.longitude]);

            // Update estimated arrival time
            const arrivalTimeElement = document.getElementById('arrivalTime');
            if (arrivalTimeElement && data.estimatedArrival) {
                arrivalTimeElement.textContent = `${data.estimatedArrival} mins`;
            }

            showStatusUpdate('üöó Driver is moving towards you', 'moving');
        }

        // Handle driver arrived
        function handleDriverArrived(data) {
            if (data.rideId !== rideId) return;

            showStatusUpdate('üéâ Your driver has arrived!', 'arrived');
            showToast('üéâ Driver has arrived at pickup location!', 'success');
            
            const arrivalTimeElement = document.getElementById('arrivalTime');
            if (arrivalTimeElement) {
                arrivalTimeElement.textContent = 'Arrived';
            }
        }

        // Handle ride started
        function handleRideStarted(data) {
            if (data.rideId !== rideId) return;

            document.getElementById('driverAcceptedModal').classList.remove('show');
            showStatusUpdate('üöÄ Ride started! Enjoy your journey', 'started');
            showToast('üöÄ Ride started! Enjoy your journey.', 'success');
        }

        // Handle ride finished
        function handleRideFinished(data) {
            if (data.rideId !== rideId) return;

            showStatusUpdate('‚úÖ Ride completed successfully!', 'finished');
            showToast('‚úÖ Ride completed! Thank you for using AutoRide.', 'success');
            
            // Redirect to home after 3 seconds
            setTimeout(() => {
                window.location.href = '/';
            }, 3000);
        }

        // Enhanced status updates
        function showStatusUpdate(message, type) {
            const statusUpdate = document.getElementById('statusUpdate');
            const statusIcon = document.getElementById('statusIcon');
            const statusText = document.getElementById('statusText');
            
            statusIcon.className = 'status-icon ' + type;
            switch(type) {
                case 'arrived':
                    statusIcon.innerHTML = '<i class="fas fa-map-marker-alt"></i>';
                    break;
                case 'started':
                    statusIcon.innerHTML = '<i class="fas fa-play"></i>';
                    break;
                case 'moving':
                    statusIcon.innerHTML = '<i class="fas fa-route"></i>';
                    break;
                case 'finished':
                    statusIcon.innerHTML = '<i class="fas fa-check-circle"></i>';
                    break;
                default:
                    statusIcon.innerHTML = '<i class="fas fa-info-circle"></i>';
            }
            
            statusText.textContent = message;
            statusUpdate.classList.add('show');
            
            setTimeout(() => {
                statusUpdate.classList.remove('show');
            }, 5000);
        }

        // Utility functions
        function getPassengerId() {
            let passengerId = localStorage.getItem('passengerId');
            if (!passengerId) {
                passengerId = 'passenger_' + Date.now() + '_' + Math.random().toString(36).substr(2, 5);
                localStorage.setItem('passengerId', passengerId);
            }
            return passengerId;
        }

        function getPassengerName() {
            return localStorage.getItem('passengerName') || 'Passenger';
        }

        function getPassengerPhone() {
            return localStorage.getItem('passengerPhone') || '+880 1234-567890';
        }

        // Enhanced error handling
        function showError(message) {
            const errorContainer = document.getElementById('errorContainer');
            const errorMessage = document.getElementById('errorMessage');
            
            errorMessage.textContent = message;
            errorContainer.style.display = 'block';
            
            console.error('Showing error to user:', message);
        }

        // Enhanced toast notifications
        function showToast(message, type = 'info') {
            // Remove existing toasts
            document.querySelectorAll('.toast').forEach(toast => toast.remove());

            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.textContent = message;
            
            document.body.appendChild(toast);
            
            setTimeout(() => toast.classList.add('show'), 100);
            
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 300);
            }, 5000);
        }

        // FIXED: Enhanced application initialization
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ AutoRide Passenger App Starting...');
            
            try {
                // Initialize components in order
                const dataLoaded = initRideData();
                if (dataLoaded) {
                    initSocket();
                    initMap();
                } else {
                    console.log('‚ö†Ô∏è Using fallback data, limited functionality');
                    initSocket();
                    initMap();
                }

                // Setup confirm booking button
                const confirmBtn = document.getElementById('confirmBookingBtn');
                if (confirmBtn) {
                    confirmBtn.addEventListener('click', confirmBooking);
                } else {
                    console.error('‚ùå Confirm booking button not found');
                }

                console.log('‚úÖ AutoRide Passenger App Initialized Successfully');

            } catch (error) {
                console.error('‚ùå Critical error during initialization:', error);
                showError('Failed to initialize the application. Please refresh the page.');
            }
        });

        // Close modals on outside click
        document.addEventListener('click', function(event) {
            if (event.target.classList.contains('driver-accepted-modal')) {
                document.getElementById('driverAcceptedModal').classList.remove('show');
            }
        });

        // Enhanced error handling
        window.addEventListener('error', function(e) {
            console.error('‚ùå JavaScript Error:', e.error);
            showToast('‚ùå Something went wrong. Please try again.', 'error');
        });

        // Add custom CSS for enhanced popup styling
        const style = document.createElement('style');
        style.textContent = `
            .custom-popup .leaflet-popup-content-wrapper {
                background: white;
                border-radius: 12px;
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
                border: none;
                font-family: 'Inter', sans-serif;
            }
            
            .custom-popup .leaflet-popup-content {
                margin: 12px 16px;
                font-weight: 500;
                color: #374151;
            }
            
            .custom-popup .leaflet-popup-tip {
                background: white;
                border: none;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            }
            
            .custom-marker-container {
                background: transparent !important;
                border: none !important;
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
