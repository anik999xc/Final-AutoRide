    <script src="https://maps.googleapis.com/maps/api/js?key=<%= env.GOOGLE_MAPS_API_KEY %>&libraries=geometry,places"></script>

    <script>
        let map, directionsService, directionsRenderer, pickupMarker, dropMarker, pickupIW, dropIW;
        const RATE_PER_KM = 12;
        const MAX_DISTANCE_KM = 15; // Maximum distance allowed from current location

        // India boundary coordinates (approximate)
        const INDIA_BOUNDS = {
            north: 37.6,
            south: 8.4,
            east: 97.25,
            west: 68.7
        };

        const rideData = <%- JSON.stringify(rideData) %>;
        let pCoords = { lat: parseFloat(rideData.pickup.lat), lng: parseFloat(rideData.pickup.lng) };
        let dCoords = { lat: parseFloat(rideData.drop.lat), lng: parseFloat(rideData.drop.lng) };
        let pName = rideData.pickup.name || "Pickup";
        let dName = rideData.drop.name || "Destination";

        // Store user's current location (pickup location)
        let userCurrentLocation = pCoords;

        // Flag to prevent multiple validations
        let isValidating = false;

        // Function to check if coordinates are within India
        function isWithinIndia(lat, lng) {
            return (lat >= INDIA_BOUNDS.south && lat <= INDIA_BOUNDS.north && 
                    lng >= INDIA_BOUNDS.west && lng <= INDIA_BOUNDS.east);
        }

        // Function to calculate distance between two coordinates using Haversine formula
        function calculateDistance(lat1, lng1, lat2, lng2) {
            const R = 6371; // Earth's radius in kilometers
            const dLat = (lat2 - lat1) * Math.PI / 180;
            const dLng = (lng2 - lng1) * Math.PI / 180;
            const a = Math.sin(dLat/2) * Math.sin(dLat/2) +
                      Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) * 
                      Math.sin(dLng/2) * Math.sin(dLng/2);
            const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
            const distance = R * c;
            return distance;
        }

        // Function to validate route distance using Google Directions API
        function validateRouteDistance(origin, destination, callback) {
            if (isValidating) return;
            isValidating = true;

            directionsService.route({
                origin: origin,
                destination: destination,
                travelMode: google.maps.TravelMode.DRIVING
            }, (response, status) => {
                isValidating = false;
                if (status === 'OK') {
                    const route = response.routes[0];
                    const leg = route.legs[0];
                    const routeDistanceKm = leg.distance.value / 1000;
                    
                    callback(routeDistanceKm <= MAX_DISTANCE_KM, routeDistanceKm);
                } else {
                    // Fallback to straight-line distance if route calculation fails
                    const straightDistance = calculateDistance(origin.lat, origin.lng, destination.lat, destination.lng);
                    callback(straightDistance <= MAX_DISTANCE_KM, straightDistance);
                }
            });
        }

        function initMap() {
            // Show loading overlay
            document.getElementById('loadingOverlay').classList.add('show');
            
            map = new google.maps.Map(document.getElementById("map"), {
                zoom: 15, center: pCoords, disableDefaultUI: true,
                styles: [
                    { "featureType": "poi", "stylers": [{ "visibility": "off" }] },
                    { "featureType": "transit", "stylers": [{ "visibility": "off" }] },
                    { "featureType": "road", "elementType": "labels", "stylers": [{ "visibility": "simplified" }] }
                ]
            });

            directionsService = new google.maps.DirectionsService();
            directionsRenderer = new google.maps.DirectionsRenderer({
                map: map, suppressMarkers: true,
                polylineOptions: { strokeColor: "#000", strokeWeight: 5, strokeOpacity: 0.8 }
            });

            const humanIcon = {
                url: "https://cdn-icons-png.flaticon.com/512/1077/1077114.png",
                scaledSize: new google.maps.Size(30, 30),
                anchor: new google.maps.Point(15, 30)
            };

            pickupMarker = new google.maps.Marker({ 
                position: pCoords, 
                map: map, 
                icon: humanIcon,
                animation: google.maps.Animation.DROP
            });
            
            dropMarker = new google.maps.Marker({ 
                position: dCoords, 
                map: map,
                animation: google.maps.Animation.DROP
            });

            pickupIW = new google.maps.InfoWindow({ disableAutoPan: true });
            dropIW = new google.maps.InfoWindow({ disableAutoPan: true });

            updateBoxes();
            calculateRoute();

            pickupMarker.addListener("dragend", (e) => handleDragEnd(e, 'p'));
            dropMarker.addListener("dragend", (e) => handleDragEnd(e, 'd'));
            
            // Hide loading after map loads
            setTimeout(() => {
                document.getElementById('loadingOverlay').classList.remove('show');
            }, 1500);
        }

        function updateBoxes() {
            pickupIW.setContent(`
                <div class="location-box">
                    <span title="${pName}">${pName}</span>
                    <button class="edit-btn" onclick="enableEdit('p')" aria-label="Edit pickup location">
                        <i class="fas fa-pencil-alt"></i>
                    </button>
                </div>
            `);
            pickupIW.open(map, pickupMarker);

            dropIW.setContent(`
                <div class="location-box">
                    <span title="${dName}">${dName}</span>
                    <button class="edit-btn" onclick="enableEdit('d')" aria-label="Edit destination">
                        <i class="fas fa-pencil-alt"></i>
                    </button>
                </div>
            `);
            dropIW.open(map, dropMarker);
        }

        function enableEdit(type) {
            if(type === 'p') { 
                pickupMarker.setDraggable(true); 
                pickupIW.close(); 
                showToast('Drag the pickup marker to change location');
            }
            else { 
                dropMarker.setDraggable(true); 
                dropIW.close(); 
                showToast('Drag the destination marker to change location');
            }
        }

        function handleDragEnd(event, type) {
            const newCoords = { lat: event.latLng.lat(), lng: event.latLng.lng() };
            
            // First check if the new location is within India
            if (!isWithinIndia(newCoords.lat, newCoords.lng)) {
                showToast('Location must be within India', 'error');
                resetMarker(type);
                return;
            }

            // Show validation message
            showToast('Checking route distance...');

            // Validate route distance using actual Google Directions
            const origin = userCurrentLocation;
            const destination = newCoords;
            
            validateRouteDistance(origin, destination, (isValid, distance) => {
                if (!isValid) {
                    showToast(`Route distance must be within ${MAX_DISTANCE_KM}km from your current location. Selected route is ${distance.toFixed(1)}km.`, 'error');
                    resetMarker(type);
                    return;
                }

                // If validation passed, update location
                const geocoder = new google.maps.Geocoder();
                geocoder.geocode({ location: newCoords }, (results, status) => {
                    if (status === "OK" && results[0]) {
                        let address = results[0].formatted_address.split(',')[0]; 
                        if (type === 'p') { 
                            pCoords = newCoords; 
                            pName = address; 
                            pickupMarker.setDraggable(false); 
                            // Update user current location if pickup is changed
                            userCurrentLocation = newCoords;
                        }
                        else { 
                            dCoords = newCoords; 
                            dName = address; 
                            dropMarker.setDraggable(false); 
                        }
                        updateBoxes();
                        calculateRoute();
                        showToast('Location updated successfully', 'success');
                    } else {
                        showToast('Failed to update location', 'error');
                        resetMarker(type);
                    }
                });
            });
        }

        function resetMarker(type) {
            if (type === 'p') {
                pickupMarker.setPosition(pCoords);
                pickupMarker.setDraggable(false);
            } else {
                dropMarker.setPosition(dCoords);
                dropMarker.setDraggable(false);
            }
            updateBoxes();
        }

        function calculateRoute() {
            // Add calculating state
            document.getElementById("distance-info").classList.add('calculating');
            document.getElementById("distance-info").innerText = "Calculating route...";
            document.getElementById("fare-display").innerText = "‚Çπ--";

            directionsService.route({
                origin: pCoords, 
                destination: dCoords, 
                travelMode: 'DRIVING'
            }, (response, status) => {
                // Remove calculating state
                document.getElementById("distance-info").classList.remove('calculating');
                
                if (status === 'OK') {
                    directionsRenderer.setDirections(response);
                    const leg = response.routes[0].legs[0];
                    
                    // Distance ke km-e niye 12 diye gun kora hoyeche (Rate: 12/km)
                    let fare = Math.max(20, Math.round((leg.distance.value / 1000) * 12));
                    
                    document.getElementById("distance-info").innerText = leg.distance.text + " ‚Ä¢ " + leg.duration.text;
                    document.getElementById("fare-display").innerText = "‚Çπ" + fare;
                } else {
                    document.getElementById("distance-info").innerText = "Route calculation failed";
                    if (typeof showToast === "function") {
                        showToast('Failed to calculate route', 'error');
                    }
                }
            });
        }

        function confirmBooking() { 
            const btn = event.target;
            const originalText = btn.innerHTML;
            
            // Add loading state
            btn.innerHTML = '<i class="fas fa-spinner fa-spin" style="margin-right: 8px;"></i>Booking...';
            btn.disabled = true;
            
            // Simulate booking process
            setTimeout(() => {
                showToast('Ride booked successfully! Finding nearby drivers...', 'success');
                btn.innerHTML = '<i class="fas fa-check" style="margin-right: 8px;"></i>Ride Booked!';
                btn.style.background = 'var(--success-color)';
                
                setTimeout(() => {
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                    btn.style.background = '';
                }, 3000);
            }, 2000);
        }

        // Enhanced utility functions
        function showToast(message, type = 'info') {
            // Remove existing toasts
            document.querySelectorAll('.toast').forEach(toast => toast.remove());

            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.textContent = message;
            
            document.body.appendChild(toast);
            
            setTimeout(() => toast.classList.add('show'), 100);
            
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Keep your original initialization
        window.onload = initMap;

        // Add some enhancement without changing core functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Add subtle interactions
            const panelHandle = document.querySelector('.panel-handle');
            
            panelHandle.addEventListener('mousedown', function() {
                this.style.transform = 'scaleX(1.1)';
            });
            
            panelHandle.addEventListener('mouseup', function() {
                this.style.transform = 'scaleX(1.2)';
            });
            
            panelHandle.addEventListener('mouseleave', function() {
                this.style.transform = 'scaleX(1)';
            });
        });

        // Enhanced error handling without breaking original functionality
        window.addEventListener('error', function(e) {
            console.error('Error:', e.error);
            showToast('Something went wrong. Please try again.', 'error');
        });
    </script>
