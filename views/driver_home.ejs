    <!-- Scripts -->
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Global variables
        let socket;
        let currentLocation = null;
        let isOnline = false;
        let map = null;
        let miniMap = null;
        let activeRide = null;
        let locationUpdateInterval = null;
        let rideRequestTimeout = null;
        let currentRating = 0;
        let pickupMarker, dropMarker, driverMarker;
        let onlineStartTime = null;

        // FIXED: Enhanced initialization with better error handling
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ AutoRide Driver Dashboard Starting...');
            
            try {
                initSocket();
                loadDriverData();
                setupEventListeners();
                initMiniMap();
                startOnlineTimer();
                
                console.log('‚úÖ Driver Dashboard Initialized Successfully');
            } catch (error) {
                console.error('‚ùå Critical error during initialization:', error);
                showNotification('‚ùå Failed to initialize dashboard. Please refresh.', 'error');
            }
        });

        // Initialize socket connection
        function initSocket() {
            try {
                socket = io();
                socket.emit('userType', 'driver');

                // Listen for ride events
                socket.on('rideRequest', handleRideRequest);
                socket.on('rideAcceptedByAnother', handleRideAcceptedByAnother);
                socket.on('passengerLocationUpdate', handlePassengerLocationUpdate);
                socket.on('otpVerificationFailed', handleOtpVerificationFailed);

                console.log('‚úÖ Socket connection initialized');
            } catch (error) {
                console.error('‚ùå Socket initialization error:', error);
                showNotification('‚ùå Connection error. Please refresh.', 'error');
            }
        }

        // Load driver data
        function loadDriverData() {
            try {
                const driverData = JSON.parse(localStorage.getItem('driverData')) || {
                    name: 'Professional Driver',
                    rating: 4.8,
                    totalTrips: 142,
                    earnings: 0
                };

                document.getElementById('driver-name').textContent = `Welcome, ${driverData.name}`;
                document.getElementById('driver-rating').textContent = driverData.rating;
                document.getElementById('total-trips').textContent = driverData.totalTrips;
                document.getElementById('earnings-amount').textContent = `‚Çπ${driverData.earnings}`;

                console.log('‚úÖ Driver data loaded:', driverData);
            } catch (error) {
                console.error('‚ùå Error loading driver data:', error);
            }
        }

        // Setup event listeners
        function setupEventListeners() {
            try {
                const statusToggle = document.getElementById('status-toggle');
                const goOnlineBtn = document.getElementById('go-online-btn');
                const acceptBtn = document.getElementById('accept-btn');
                const declineBtn = document.getElementById('decline-btn');

                if (statusToggle) {
                    statusToggle.addEventListener('change', toggleOnlineStatus);
                }

                if (goOnlineBtn) {
                    goOnlineBtn.addEventListener('click', () => {
                        statusToggle.checked = true;
                        toggleOnlineStatus();
                    });
                }

                if (acceptBtn) acceptBtn.addEventListener('click', acceptRide);
                if (declineBtn) declineBtn.addEventListener('click', declineRide);

                // OTP input handling
                const otpInputs = document.querySelectorAll('.otp-input');
                otpInputs.forEach((input, index) => {
                    input.addEventListener('input', (e) => handleOtpInput(e, index));
                    input.addEventListener('keydown', (e) => handleOtpKeydown(e, index));
                    input.addEventListener('paste', handleOtpPaste);
                });

                const verifyBtn = document.getElementById('verify-otp');
                if (verifyBtn) verifyBtn.addEventListener('click', verifyOtp);

                const finishBtn = document.getElementById('finish-ride');
                if (finishBtn) finishBtn.addEventListener('click', finishRide);

                const collectBtn = document.getElementById('collect-cash');
                if (collectBtn) collectBtn.addEventListener('click', collectCash);

                // Rating system
                document.querySelectorAll('#rating-stars i').forEach(star => {
                    star.addEventListener('click', (e) => {
                        currentRating = parseInt(e.target.dataset.rating);
                        updateRatingDisplay();
                    });
                    
                    star.addEventListener('mouseover', (e) => {
                        const hoverRating = parseInt(e.target.dataset.rating);
                        highlightStars(hoverRating);
                    });
                });
                
                const ratingStars = document.getElementById('rating-stars');
                if (ratingStars) {
                    ratingStars.addEventListener('mouseleave', () => {
                        updateRatingDisplay();
                    });
                }

                const submitRatingBtn = document.getElementById('submit-rating');
                if (submitRatingBtn) {
                    submitRatingBtn.addEventListener('click', submitRating);
                }

                console.log('‚úÖ Event listeners setup completed');
            } catch (error) {
                console.error('‚ùå Error setting up event listeners:', error);
            }
        }

        // Enhanced toggle online status
        function toggleOnlineStatus() {
            const statusToggle = document.getElementById('status-toggle');
            if (statusToggle && statusToggle.checked) {
                goOnline();
            } else {
                goOffline();
            }
        }

        // Enhanced go online
        function goOnline() {
            if (navigator.geolocation) {
                const statusBadge = document.getElementById('status-badge');
                statusBadge.innerHTML = '<div class="loading-spinner"></div><span>CONNECTING...</span>';
                
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        currentLocation = {
                            latitude: position.coords.latitude,
                            longitude: position.coords.longitude
                        };

                        isOnline = true;
                        onlineStartTime = Date.now();
                        statusBadge.className = 'status-badge online';
                        statusBadge.innerHTML = '<i class="fas fa-circle text-xs"></i><span>ONLINE</span>';
                        
                        document.getElementById('offline-prompt').classList.add('hidden');
                        document.getElementById('ride-history').classList.remove('hidden');

                        startLocationUpdates();
                        updateMiniMap();

                        // Notify server
                        socket.emit('driverOnline', {
                            driverId: getDriverId(),
                            location: currentLocation,
                            name: getDriverName(),
                            rating: getDriverRating(),
                            phone: getDriverPhone(),
                            vehicle: getDriverVehicle()
                        });

                        showNotification('üöó You are now online and ready to receive rides!', 'success');
                    },
                    (error) => {
                        console.error('Geolocation error:', error);
                        const statusToggle = document.getElementById('status-toggle');
                        statusToggle.checked = false;
                        
                        const statusBadge = document.getElementById('status-badge');
                        statusBadge.className = 'status-badge offline';
                        statusBadge.innerHTML = '<i class="fas fa-circle text-xs"></i><span>OFFLINE</span>';
                        
                        showNotification('üìç Unable to get location. Please enable location services.', 'error');
                    }
                );
            } else {
                showNotification('‚ùå Geolocation not supported by this browser.', 'error');
            }
        }

        // Enhanced go offline
        function goOffline() {
            isOnline = false;
            onlineStartTime = null;
            
            const statusBadge = document.getElementById('status-badge');
            statusBadge.className = 'status-badge offline';
            statusBadge.innerHTML = '<i class="fas fa-circle text-xs"></i><span>OFFLINE</span>';
            
            document.getElementById('offline-prompt').classList.remove('hidden');
            document.getElementById('ride-history').classList.add('hidden');
            
            stopLocationUpdates();
            hideRideRequest();

            socket.emit('driverOffline', { driverId: getDriverId() });
            showNotification('üì¥ You are now offline', 'info');
        }

        // Location updates
        function startLocationUpdates() {
            locationUpdateInterval = setInterval(() => {
                if (navigator.geolocation && isOnline) {
                    navigator.geolocation.getCurrentPosition(
                        (position) => {
                            currentLocation = {
                                latitude: position.coords.latitude,
                                longitude: position.coords.longitude
                            };

                            socket.emit('locationUpdate', {
                                driverId: getDriverId(),
                                location: currentLocation,
                                timestamp: Date.now()
                            });

                            if (!activeRide) {
                                updateMiniMap();
                            }
                        },
                        (error) => console.error('Location update error:', error)
                    );
                }
            }, 5000);
        }

        function stopLocationUpdates() {
            if (locationUpdateInterval) {
                clearInterval(locationUpdateInterval);
                locationUpdateInterval = null;
            }
        }

        // Enhanced mini map
        function initMiniMap() {
            const miniMapEl = document.getElementById('mini-map');
            miniMapEl.innerHTML = `
                <div class="absolute inset-0 bg-gradient-to-br from-blue-100 to-blue-200 rounded-lg flex items-center justify-center">
                    <div class="text-blue-600 text-center">
                        <i class="fas fa-map-marked-alt text-4xl mb-2"></i>
                        <p class="text-sm font-medium">Enable location to see map</p>
                    </div>
                </div>
            `;
        }

        function updateMiniMap() {
            if (!currentLocation) return;

            const miniMapEl = document.getElementById('mini-map');
            miniMapEl.innerHTML = `
                <div class="absolute inset-0 bg-gradient-to-br from-green-100 to-blue-100 rounded-lg flex items-center justify-center">
                    <div class="driver-marker">
                        <i class="fas fa-car"></i>
                    </div>
                </div>
            `;

            // Update location text
            reverseGeocode(currentLocation.latitude, currentLocation.longitude)
                .then(address => {
                    document.getElementById('current-location').innerHTML = `
                        <i class="fas fa-map-marker-alt text-green-500 mr-2"></i>
                        ${address}
                    `;
                });
        }

        // Online timer
        function startOnlineTimer() {
            setInterval(() => {
                if (isOnline && onlineStartTime) {
                    const onlineTime = Math.floor((Date.now() - onlineStartTime) / 1000 / 60 / 60 * 10) / 10;
                    document.getElementById('online-hours').textContent = `${onlineTime}h`;
                }
            }, 60000);
        }

        // Enhanced ride request handling
        function handleRideRequest(requestData) {
            if (!isOnline) return;

            console.log('üîî New ride request:', requestData);

            // Populate popup
            document.getElementById('pickup-location').textContent = requestData.pickupAddress || 'Pickup Location';
            document.getElementById('drop-location').textContent = requestData.dropAddress || 'Drop Location';
            document.getElementById('request-trip-distance').textContent = `${requestData.distance} km`;
            document.getElementById('request-trip-time').textContent = `${requestData.duration} mins`;
            document.getElementById('request-passenger-name').textContent = requestData.passengerName || 'Passenger';
            document.getElementById('request-passenger-rating').textContent = requestData.passengerRating || '4.5';

            // Calculate fare and distance
            const distanceFromDriver = requestData.distanceFromDriver || '0.0';
            document.getElementById('distance-from-you').textContent = `${distanceFromDriver} km`;

            const driverFare = Math.round(parseFloat(requestData.distance) * 10);
            document.getElementById('fare-amount').textContent = `‚Çπ${driverFare}`;

            window.currentRideRequest = requestData;
            showRideRequest();
        }

        // Show ride request popup
        function showRideRequest() {
            const rideRequestPopup = document.getElementById('ride-request-popup');
            rideRequestPopup.classList.add('show');
            
            let countdown = 180;
            const countdownEl = document.getElementById('countdown');
            countdownEl.textContent = countdown;

            rideRequestTimeout = setInterval(() => {
                countdown--;
                countdownEl.textContent = countdown;
                
                // Change countdown colors
                if (countdown <= 30) {
                    countdownEl.parentElement.style.background = 'linear-gradient(135deg, #ef4444, #dc2626)';
                } else if (countdown <= 60) {
                    countdownEl.parentElement.style.background = 'linear-gradient(135deg, #f59e0b, #d97706)';
                }
                
                if (countdown <= 0) {
                    clearInterval(rideRequestTimeout);
                    hideRideRequest();
                    showNotification('‚è∞ Ride request expired', 'warning');
                }
            }, 1000);
        }

        function hideRideRequest() {
            const rideRequestPopup = document.getElementById('ride-request-popup');
            rideRequestPopup.classList.remove('show');
            
            if (rideRequestTimeout) {
                clearInterval(rideRequestTimeout);
                rideRequestTimeout = null;
            }
        }

        // Accept/decline ride
        function acceptRide() {
            if (!window.currentRideRequest) return;

            const btn = document.getElementById('accept-btn');
            const originalHTML = btn.innerHTML;
            btn.innerHTML = '<div class="loading-spinner"></div><span>Accepting...</span>';
            btn.disabled = true;

            socket.emit('rideAccepted', {
                rideId: window.currentRideRequest.rideId,
                driverId: getDriverId(),
                driverLocation: currentLocation
            });

            activeRide = window.currentRideRequest;
            hideRideRequest();
            showActiveRide();

            setTimeout(() => {
                btn.innerHTML = originalHTML;
                btn.disabled = false;
            }, 2000);

            showNotification('‚úÖ Ride accepted! Navigate to pickup location.', 'success');
        }

        function declineRide() {
            if (!window.currentRideRequest) return;

            socket.emit('rideDeclined', {
                rideId: window.currentRideRequest.rideId,
                driverId: getDriverId(),
                reason: 'driver_declined'
            });

            hideRideRequest();
            showNotification('‚ùå Ride declined', 'info');
        }

        // Show active ride
        function showActiveRide() {
            if (!activeRide) return;

            document.getElementById('offline-prompt').classList.add('hidden');
            document.getElementById('ride-history').classList.add('hidden');
            document.getElementById('active-ride').classList.remove('hidden');

            // Populate ride details
            document.getElementById('passenger-name').textContent = activeRide.passengerName || 'Passenger';
            document.getElementById('passenger-phone').textContent = activeRide.passengerPhone || 'N/A';
            document.getElementById('passenger-rating').textContent = activeRide.passengerRating || '4.5';
            document.getElementById('trip-pickup').textContent = activeRide.pickupAddress;
            document.getElementById('trip-drop').textContent = activeRide.dropAddress;
            document.getElementById('trip-distance').textContent = `${activeRide.distance} km`;
            document.getElementById('trip-fare').textContent = `‚Çπ${Math.round(parseFloat(activeRide.distance) * 10)}`;

            initRouteMap();
            document.getElementById('otp-section').classList.remove('hidden');
        }

        // Enhanced route map
        function initRouteMap() {
            if (!activeRide || !currentLocation) return;

            if (map) map.remove();

            map = L.map('map', {
                zoomControl: true,
                scrollWheelZoom: true,
                dragging: true
            }).setView([currentLocation.latitude, currentLocation.longitude], 13);

            // Map tiles
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '¬© OpenStreetMap contributors',
                maxZoom: 18
            }).addTo(map);

            // Driver marker
            const driverIcon = L.divIcon({
                html: '<div class="driver-marker"><i class="fas fa-car"></i></div>',
                iconSize: [40, 40],
                iconAnchor: [20, 20],
                className: 'custom-marker-wrapper'
            });

            driverMarker = L.marker([currentLocation.latitude, currentLocation.longitude], { icon: driverIcon })
                .addTo(map)
                .bindPopup('<b>üöó Your Location</b><br>Driver Position');

            // Pickup marker
            const pickupIcon = L.divIcon({
                html: '<div class="pickup-marker"><i class="fas fa-user"></i></div>',
                iconSize: [32, 32],
                iconAnchor: [16, 16],
                className: 'custom-marker-wrapper'
            });

            pickupMarker = L.marker([activeRide.pickupLat, activeRide.pickupLng], { icon: pickupIcon })
                .addTo(map)
                .bindPopup('<b>üìç Pickup Location</b><br>' + activeRide.pickupAddress);

            // Route line
            const routeLine = L.polyline([
                [currentLocation.latitude, currentLocation.longitude],
                [activeRide.pickupLat, activeRide.pickupLng]
            ], {
                color: '#006aff',
                weight: 4,
                opacity: 0.8,
                dashArray: '10, 5'
            }).addTo(map);

            // Fit bounds
            const group = new L.featureGroup([driverMarker, pickupMarker]);
            map.fitBounds(group.getBounds().pad(0.1));

            // Update distance and time
            const distance = calculateDistance(
                currentLocation.latitude, currentLocation.longitude,
                activeRide.pickupLat, activeRide.pickupLng
            );

            document.getElementById('pickup-distance').textContent = `${distance.toFixed(1)} km`;
            document.getElementById('pickup-time').textContent = `${Math.round(distance * 3)} mins`;
        }

        // Enhanced OTP handling
        function handleOtpInput(event, index) {
            const input = event.target;
            const value = input.value;

            if (!/^\d*$/.test(value)) {
                input.value = '';
                return;
            }

            if (value && index < 3) {
                document.getElementById(`otp-${index + 2}`).focus();
            }

            checkOtpComplete();
        }

        function handleOtpKeydown(event, index) {
            if (event.key === 'Backspace' && !event.target.value && index > 0) {
                document.getElementById(`otp-${index}`).focus();
            }
        }

        function handleOtpPaste(event) {
            event.preventDefault();
            const paste = event.clipboardData.getData('text');
            if (paste.length === 4 && /^\d{4}$/.test(paste)) {
                for (let i = 0; i < 4; i++) {
                    document.getElementById(`otp-${i + 1}`).value = paste[i];
                }
                checkOtpComplete();
            }
        }

        function checkOtpComplete() {
            const otp = getEnteredOtp();
            const verifyBtn = document.getElementById('verify-otp');
            
            if (otp.length === 4) {
                verifyBtn.disabled = false;
                verifyBtn.classList.remove('opacity-50');
            } else {
                verifyBtn.disabled = true;
                verifyBtn.classList.add('opacity-50');
            }
        }

        function getEnteredOtp() {
            let otp = '';
            for (let i = 1; i <= 4; i++) {
                otp += document.getElementById(`otp-${i}`).value;
            }
            return otp;
        }

        // Enhanced OTP verification
        function verifyOtp() {
            const enteredOtp = getEnteredOtp();
            const btn = document.getElementById('verify-otp');
            const originalHTML = btn.innerHTML;
            
            btn.innerHTML = '<div class="loading-spinner"></div><span>Verifying...</span>';
            btn.disabled = true;
            
            // Send to server for verification
            socket.emit('rideStarted', {
                rideId: activeRide.rideId,
                driverId: getDriverId(),
                otp: enteredOtp,
                timestamp: Date.now()
            });

            // Reset button after delay
            setTimeout(() => {
                btn.innerHTML = originalHTML;
                btn.disabled = true; // Will be re-enabled by checkOtpComplete if valid
            }, 2000);
        }

        function handleOtpVerificationFailed(data) {
            if (data.rideId === activeRide.rideId) {
                document.getElementById('otp-error').classList.remove('hidden');
                clearOtpInputs();
                
                setTimeout(() => {
                    document.getElementById('otp-error').classList.add('hidden');
                }, 5000);
            }
        }

        function clearOtpInputs() {
            for (let i = 1; i <= 4; i++) {
                document.getElementById(`otp-${i}`).value = '';
            }
            checkOtpComplete();
        }

        // Start ride (called when OTP is verified)
        function startRide() {
            document.getElementById('otp-section').classList.add('hidden');
            document.getElementById('ride-progress').classList.remove('hidden');
            document.getElementById('navigation-title').textContent = 'Navigate to Drop Location';

            updateMapForInProgressRide();
            showNotification('üöÄ Ride started! Navigate safely to destination.', 'success');
        }

        function updateMapForInProgressRide() {
            if (!map || !activeRide) return;

            // Remove pickup marker, add drop marker
            if (pickupMarker) map.removeLayer(pickupMarker);

            const dropIcon = L.divIcon({
                html: '<div class="drop-marker"><i class="fas fa-map-marker-alt"></i></div>',
                iconSize: [32, 32],
                iconAnchor: [16, 16],
                className: 'custom-marker-wrapper'
            });

            const dropMarker = L.marker([activeRide.dropLat, activeRide.dropLng], { icon: dropIcon })
                .addTo(map)
                .bindPopup('<b>üéØ Drop Location</b><br>' + activeRide.dropAddress);

            // Update route line
            const routeLine = L.polyline([
                [currentLocation.latitude, currentLocation.longitude],
                [activeRide.dropLat, activeRide.dropLng]
            ], {
                color: '#10b981',
                weight: 4,
                opacity: 0.8
            }).addTo(map);

            const group = new L.featureGroup([driverMarker, dropMarker]);
            map.fitBounds(group.getBounds().pad(0.1));
        }

        function finishRide() {
            document.getElementById('ride-progress').classList.add('hidden');
            document.getElementById('cash-collection').classList.remove('hidden');

            const passengerFare = Math.round(parseFloat(activeRide.distance) * 12);
            document.getElementById('final-fare').textContent = `‚Çπ${passengerFare}`;

            socket.emit('rideFinished', {
                rideId: activeRide.rideId,
                driverId: getDriverId(),
                timestamp: Date.now()
            });

            showNotification('‚úÖ Ride completed! Collect payment from passenger.', 'success');
        }

        function collectCash() {
            document.getElementById('rating-backdrop').classList.add('show');
            document.getElementById('active-ride').classList.add('hidden');

            const driverEarning = Math.round(parseFloat(activeRide.distance) * 10);
            updateEarnings(driverEarning);

            socket.emit('cashCollected', {
                rideId: activeRide.rideId,
                driverId: getDriverId(),
                amount: driverEarning,
                timestamp: Date.now()
            });
        }

        // Rating system
        function highlightStars(rating) {
            document.querySelectorAll('#rating-stars i').forEach((star, index) => {
                if (index < rating) {
                    star.classList.remove('text-gray-300');
                    star.classList.add('text-yellow-400');
                } else {
                    star.classList.remove('text-yellow-400');
                    star.classList.add('text-gray-300');
                }
            });
        }

        function updateRatingDisplay() {
            highlightStars(currentRating);
        }

        function submitRating() {
            if (currentRating === 0) {
                showNotification('‚≠ê Please select a rating first', 'warning');
                return;
            }

            const btn = document.getElementById('submit-rating');
            const originalHTML = btn.innerHTML;
            btn.innerHTML = '<div class="loading-spinner"></div><span>Submitting...</span>';
            btn.disabled = true;

            socket.emit('ratingSubmitted', {
                rideId: activeRide.rideId,
                driverId: getDriverId(),
                passengerId: activeRide.passengerId,
                rating: currentRating,
                timestamp: Date.now()
            });

            setTimeout(() => {
                document.getElementById('rating-backdrop').classList.remove('show');
                resetForNextRide();
                showNotification('üôè Thank you for your rating!', 'success');
                btn.innerHTML = originalHTML;
                btn.disabled = false;
            }, 2000);
        }

        // Reset for next ride
        function resetForNextRide() {
            activeRide = null;
            currentRating = 0;
            
            document.getElementById('ride-history').classList.remove('hidden');
            clearOtpInputs();
            
            if (map) {
                map.remove();
                map = null;
            }

            updateRatingDisplay();
            addToRideHistory();
        }

        // Update earnings
        function updateEarnings(amount) {
            const currentEarnings = parseInt(document.getElementById('earnings-amount').textContent.replace('‚Çπ', '')) || 0;
            const newEarnings = currentEarnings + amount;
            
            animateValue(document.getElementById('earnings-amount'), currentEarnings, newEarnings, 1000);

            const currentTrips = parseInt(document.getElementById('trips-completed').textContent.split(' ')[0]) || 0;
            document.getElementById('trips-completed').textContent = `${currentTrips + 1} trips completed today`;

            const totalTrips = parseInt(document.getElementById('total-trips').textContent) || 0;
            document.getElementById('total-trips').textContent = totalTrips + 1;

            // Save to localStorage
            const driverData = JSON.parse(localStorage.getItem('driverData')) || {};
            driverData.earnings = newEarnings;
            driverData.totalTrips = totalTrips + 1;
            localStorage.setItem('driverData', JSON.stringify(driverData));
        }

        function animateValue(element, start, end, duration) {
            const startTime = performance.now();
            const update = (currentTime) => {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                const current = Math.round(start + (end - start) * progress);
                element.textContent = `‚Çπ${current}`;
                
                if (progress < 1) {
                    requestAnimationFrame(update);
                }
            };
            requestAnimationFrame(update);
        }

        // Add to ride history
        function addToRideHistory() {
            if (!activeRide) return;

            const historyList = document.getElementById('history-list');
            const driverEarning = Math.round(parseFloat(activeRide.distance) * 10);

