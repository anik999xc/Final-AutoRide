                                <div class="text-sm text-gray-600">Distance</div>
                                <div class="font-bold text-lg" id="pickup-distance">-- km</div>
                            </div>
                            <div class="route-stat">
                                <div class="text-sm text-gray-600">ETA</div>
                                <div class="font-bold text-lg" id="pickup-time">-- mins</div>
                            </div>
                        </div>
                    </div>

                    <!-- Passenger Details -->
                    <div class="passenger-card">
                        <div class="flex items-center">
                            <div class="passenger-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="flex-1">
                                <h4 class="font-bold text-lg text-gray-900" id="passenger-name">Loading...</h4>
                                <p class="text-gray-600 flex items-center gap-2">
