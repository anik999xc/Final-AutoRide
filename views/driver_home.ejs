<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.0.0/css/all.min.css">
    <style>
        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }
        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }
        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }
        input:checked + .toggle-slider {
            background-color: #4CAF50;
        }
        input:checked + .toggle-slider:before {
            transform: translateX(26px);
        }
        .ride-request-popup {
            animation: slideInUp 0.5s ease-out;
        }
        @keyframes slideInUp {
            from {
                transform: translateY(100%);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
        .pulse {
            animation: pulse 1.5s infinite;
        }
        @keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.7);
            }
            70% {
                box-shadow: 0 0 0 15px rgba(255, 0, 0, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(255, 0, 0, 0);
            }
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="container mx-auto px-4 py-6">
        <!-- Header with Driver Profile -->
        <div class="bg-white rounded-lg shadow-md p-4 mb-6">
            <div class="flex justify-between items-center">
                <div class="flex items-center">
                    <div class="rounded-full bg-blue-500 text-white p-3 mr-3">
                        <i class="fas fa-car text-xl"></i>
                    </div>
                    <div>
                        <h1 class="text-xl font-bold">Driver Dashboard</h1>
                        <p class="text-gray-600" id="driver-name">Welcome, Driver</p>
                    </div>
                </div>
                <div class="flex items-center">
                    <div class="mr-4 text-right">
                        <span id="status-text" class="text-red-500 font-bold">OFFLINE</span>
                        <p class="text-sm text-gray-500">Status</p>
                    </div>
                    <label class="toggle-switch">
                        <input type="checkbox" id="status-toggle">
                        <span class="toggle-slider"></span>
                    </label>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Current Location -->
            <div class="bg-white rounded-lg shadow-md p-4 col-span-1">
                <h2 class="text-lg font-bold text-gray-700 mb-2">CURRENT LOCATION</h2>
                <div class="flex items-center">
                    <i class="fas fa-map-marker-alt text-red-500 mr-2"></i>
                    <p id="current-location" class="text-gray-800">Not available</p>
                </div>
                <div class="mt-4">
                    <div class="h-40 bg-gray-200 rounded relative" id="mini-map">
                        <div class="absolute inset-0 flex items-center justify-center" id="location-loading">
                            <i class="fas fa-spinner fa-spin text-gray-500 text-2xl"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Today's Earnings -->
            <div class="bg-white rounded-lg shadow-md p-4 col-span-1">
                <div class="flex justify-between items-center mb-2">
                    <h2 class="text-lg font-bold text-gray-700">TODAY'S EARNINGS</h2>
                    <a href="#" class="text-blue-500 text-sm" id="view-details">View details</a>
                </div>
                <div class="text-center py-8">
                    <p class="text-4xl font-bold text-green-600" id="earnings-amount">₹0.00</p>
                    <p class="text-gray-500 mt-2" id="trips-completed">0 trips completed today</p>
                </div>
            </div>

            <!-- Driver Stats -->
            <div class="bg-white rounded-lg shadow-md p-4 col-span-1">
                <h2 class="text-lg font-bold text-gray-700 mb-2">DRIVER STATS</h2>
                <div class="grid grid-cols-2 gap-4">
                    <div class="bg-blue-50 p-3 rounded">
                        <p class="text-sm text-gray-500">Rating</p>
                        <div class="flex items-center mt-1">
                            <i class="fas fa-star text-yellow-400 mr-1"></i>
                            <span class="text-lg font-semibold">4.8</span>
                        </div>
                    </div>
                    <div class="bg-blue-50 p-3 rounded">
                        <p class="text-sm text-gray-500">Acceptance</p>
                        <div class="flex items-center mt-1">
                            <i class="fas fa-check-circle text-green-500 mr-1"></i>
                            <span class="text-lg font-semibold">95%</span>
                        </div>
                    </div>
                    <div class="bg-blue-50 p-3 rounded">
                        <p class="text-sm text-gray-500">Total Trips</p>
                        <div class="flex items-center mt-1">
                            <i class="fas fa-route text-blue-500 mr-1"></i>
                            <span class="text-lg font-semibold">142</span>
                        </div>
                    </div>
                    <div class="bg-blue-50 p-3 rounded">
                        <p class="text-sm text-gray-500">Online Hours</p>
                        <div class="flex items-center mt-1">
                            <i class="fas fa-clock text-purple-500 mr-1"></i>
                            <span class="text-lg font-semibold">3.5</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Go Online Prompt (shown when offline) -->
        <div id="offline-prompt" class="bg-white rounded-lg shadow-md p-6 mt-6 text-center">
            <div class="text-6xl mb-4 text-gray-300">
                <i class="fas fa-car-alt"></i>
            </div>
            <h2 class="text-xl font-bold text-gray-700 mb-2">You're Currently Offline</h2>
            <p class="text-gray-600 mb-4">Go online to start receiving ride requests from passengers</p>
            <button id="go-online-btn" class="bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-full transition duration-300">
                Go Online
            </button>
        </div>

        <!-- Ride History (initially hidden, shown when online) -->
        <div id="ride-history" class="bg-white rounded-lg shadow-md p-4 mt-6 hidden">
            <h2 class="text-lg font-bold text-gray-700 mb-4">RECENT RIDES</h2>
            <div class="divide-y divide-gray-200" id="history-list">
                <p class="text-gray-500 text-center py-4">No recent rides to display</p>
            </div>
        </div>
    </div>

    <!-- New Ride Request Popup (hidden by default) -->
    <div id="ride-request-popup" class="fixed bottom-0 left-0 right-0 bg-white rounded-t-3xl shadow-lg p-6 transition-all duration-300 transform translate-y-full">
        <div class="absolute -top-5 left-1/2 transform -translate-x-1/2 bg-red-500 text-white rounded-full w-10 h-10 flex items-center justify-center pulse">
            <i class="fas fa-bell"></i>
        </div>
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold text-gray-800">New Ride Request</h2>
            <div class="bg-yellow-100 text-yellow-800 rounded-full px-3 py-1 text-sm font-bold">
                <span id="countdown">120</span>s
            </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <div class="mb-4">
                    <h3 class="text-sm font-bold text-gray-500 mb-1">PICKUP LOCATION</h3>
                    <div class="flex items-start">
                        <i class="fas fa-map-marker-alt text-green-500 mr-2 mt-1"></i>
                        <p id="pickup-location" class="text-gray-800">Loading...</p>
                    </div>
                </div>
                
                <div class="mb-4">
                    <h3 class="text-sm font-bold text-gray-500 mb-1">DROP LOCATION</h3>
                    <div class="flex items-start">
                        <i class="fas fa-map-marker-alt text-red-500 mr-2 mt-1"></i>
                        <p id="drop-location" class="text-gray-800">Loading...</p>
                    </div>
                </div>
                
                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <h3 class="text-sm font-bold text-gray-500 mb-1">DISTANCE</h3>
                        <p id="trip-distance" class="text-gray-800 font-semibold">0.0 km</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-bold text-gray-500 mb-1">ESTIMATED TIME</h3>
                        <p id="trip-time" class="text-gray-800 font-semibold">0 mins</p>
                    </div>
                </div>
            </div>
            
            <div>
                <div class="mb-4">
                    <h3 class="text-sm font-bold text-gray-500 mb-1">DISTANCE FROM YOU</h3>
                    <p id="distance-from-you" class="text-gray-800 font-semibold">0.0 km</p>
                </div>
                
                <div class="mb-4">
                    <h3 class="text-sm font-bold text-gray-500 mb-1">FARE</h3>
                    <p id="fare-amount" class="text-2xl font-bold text-green-600">₹0.00</p>
                </div>
                
                <div class="mb-4">
                    <h3 class="text-sm font-bold text-gray-500 mb-1">PASSENGER DETAILS</h3>
                    <div class="flex items-center">
                        <div class="bg-gray-200 rounded-full w-10 h-10 flex items-center justify-center mr-2">
                            <i class="fas fa-user text-gray-500"></i>
                        </div>
                        <div>
                            <p id="passenger-name" class="text-gray-800 font-semibold">Passenger</p>
                            <div class="flex items-center">
                                <i class="fas fa-star text-yellow-400 text-sm mr-1"></i>
                                <span id="passenger-rating" class="text-gray-600 text-sm">4.7</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="flex gap-4 mt-4">
            <button id="decline-btn" class="flex-1 bg-white border border-red-500 text-red-500 font-bold py-3 px-6 rounded-lg hover:bg-red-50 transition duration-300">
                Decline
            </button>
            <button id="accept-btn" class="flex-1 bg-green-500 text-white font-bold py-3 px-6 rounded-lg hover:bg-green-600 transition duration-300">
                Accept Ride
            </button>
        </div>
    </div>

    <!-- Details Modal (hidden by default) -->
    <div id="earnings-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
        <div class="bg-white rounded-lg shadow-lg p-6 max-w-md w-full mx-4">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-gray-800">Earnings Details</h2>
                <button id="close-modal" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <div class="divide-y divide-gray-200">
                <div class="py-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Trip Earnings</span>
                        <span class="font-semibold">₹250.00</span>
                    </div>
                </div>
                <div class="py-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Surge Bonus</span>
                        <span class="font-semibold">₹50.00</span>
                    </div>
                </div>
                <div class="py-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Tips</span>
                        <span class="font-semibold">₹20.00</span>
                    </div>
                </div>
                <div class="py-3">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Platform Fee</span>
                        <span class="font-semibold text-red-500">-₹35.00</span>
                    </div>
                </div>
                <div class="py-3">
                    <div class="flex justify-between font-bold">
                        <span>Total Earnings</span>
                        <span>₹285.00</span>
                    </div>
                </div>
            </div>
            <button id="close-details" class="mt-4 w-full bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 transition duration-300">
                Close
            </button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set up toggle switch
            const statusToggle = document.getElementById('status-toggle');
            const statusText = document.getElementById('status-text');
            const offlinePrompt = document.getElementById('offline-prompt');
            const rideHistory = document.getElementById('ride-history');
            const goOnlineBtn = document.getElementById('go-online-btn');
            
            // Earnings modal functionality
            const viewDetails = document.getElementById('view-details');
            const earningsModal = document.getElementById('earnings-modal');
            const closeModal = document.getElementById('close-modal');
            const closeDetails = document.getElementById('close-details');
            
            // Ride request popup elements
            const rideRequestPopup = document.getElementById('ride-request-popup');
            const acceptBtn = document.getElementById('accept-btn');
            const declineBtn = document.getElementById('decline-btn');
            const countdownEl = document.getElementById('countdown');
            
            // Location elements
            const currentLocationEl = document.getElementById('current-location');
            const miniMap = document.getElementById('mini-map');
            const locationLoading = document.getElementById('location-loading');
            
            // Sample locations
            const locations = [
                "Park Street, Kolkata",
                "Salt Lake Sector V, Kolkata",
                "New Town, Kolkata",
                "Howrah Bridge, Kolkata",
                "Gariahat, Kolkata"
            ];
            
            // Toggle online/offline status
            function toggleStatus() {
                if (statusToggle.checked) {
                    statusText.textContent = "ONLINE";
                    statusText.classList.remove('text-red-500');
                    statusText.classList.add('text-green-500');
                    offlinePrompt.classList.add('hidden');
                    rideHistory.classList.remove('hidden');
                    
                    // Simulate getting location
                    locationLoading.classList.remove('hidden');
                    setTimeout(() => {
                        locationLoading.classList.add('hidden');
                        const randomLocation = locations[Math.floor(Math.random() * locations.length)];
                        currentLocationEl.textContent = randomLocation;
                        
                        // Add a car marker to mini map
                        miniMap.innerHTML = `
                            <div class="absolute inset-0 bg-gray-200 rounded flex items-center justify-center">
                                <div class="bg-blue-500 rounded-full w-8 h-8 flex items-center justify-center text-white">
                                    <i class="fas fa-car-alt"></i>
                                </div>
                            </div>
                        `;
                        
                        // Simulate ride request after going online
                        setTimeout(showRideRequest, 3000);
                    }, 1500);
                } else {
                    statusText.textContent = "OFFLINE";
                    statusText.classList.remove('text-green-500');
                    statusText.classList.add('text-red-500');
                    offlinePrompt.classList.remove('hidden');
                    rideHistory.classList.add('hidden');
                    currentLocationEl.textContent = "Not available";
                    miniMap.innerHTML = `
                        <div class="absolute inset-0 flex items-center justify-center">
                            <p class="text-gray-500">Location unavailable</p>
                        </div>
                    `;
                    hideRideRequest();
                }
            }
            
            statusToggle.addEventListener('change', toggleStatus);
            goOnlineBtn.addEventListener('click', function() {
                statusToggle.checked = true;
                toggleStatus();
            });
            
            // Earnings modal
            viewDetails.addEventListener('click', function(e) {
                e.preventDefault();
                earningsModal.classList.remove('hidden');
            });
            
            closeModal.addEventListener('click', function() {
                earningsModal.classList.add('hidden');
            });
            
            closeDetails.addEventListener('click', function() {
                earningsModal.classList.add('hidden');
            });
            
            // Handle ride request
            function showRideRequest() {
                // Populate ride request data
                document.getElementById('pickup-location').textContent = "Salt Lake Sector V, Kolkata";
                document.getElementById('drop-location').textContent = "Park Street, Kolkata";
                document.getElementById('trip-distance').textContent = "7.5 km";
                document.getElementById('trip-time').textContent = "25 mins";
                document.getElementById('distance-from-you').textContent = "1.2 km";
                document.getElementById('fare-amount').textContent = "₹180.00";
                document.getElementById('passenger-name').textContent = "Arijit Banerjee";
                
                // Show popup with animation
                rideRequestPopup.classList.add('ride-request-popup');
                rideRequestPopup.style.transform = "translateY(0)";
                
                // Start countdown
                let countdown = 120;
                countdownEl.textContent = countdown;
                const timer = setInterval(() => {
                    countdown--;
                    countdownEl.textContent = countdown;
                    if (countdown <= 0) {
                        clearInterval(timer);
                        hideRideRequest();
                    }
                    // Make countdown red when under 30 seconds
                    if (countdown <= 30) {
                        countdownEl.parentElement.classList.remove('bg-yellow-100', 'text-yellow-800');
                        countdownEl.parentElement.classList.add('bg-red-100', 'text-red-800');
                    }
                }, 1000);
            }
            
            function hideRideRequest() {
                rideRequestPopup.style.transform = "translateY(100%)";
            }
            
            acceptBtn.addEventListener('click', function() {
                hideRideRequest();
                // Update earnings and add to history
                document.getElementById('earnings-amount').textContent = "₹180.00";
                document.getElementById('trips-completed').textContent = "1 trip completed today";
                
                // Add to ride history
                const historyList = document.getElementById('history-list');
                historyList.innerHTML = `
                    <div class="py-4">
                        <div class="flex justify-between mb-2">
                            <div class="font-semibold">Salt Lake Sector V → Park Street</div>
                            <div class="text-green-600 font-bold">₹180.00</div>
                        </div>
                        <div class="flex justify-between text-sm text-gray-500">
                            <div>7.5 km • 25 mins</div>
                            <div>Just now</div>
                        </div>
                    </div>
                    <p class="text-gray-500 text-center py-4">No more rides to display</p>
                `;
                
                // Show success notification
                const notification = document.createElement('div');
                notification.className = 'fixed top-4 right-4 bg-green-500 text-white px-4 py-2 rounded shadow-lg z-50';
                notification.innerHTML = `
                    <div class="flex items-center">
                        <i class="fas fa-check-circle mr-2"></i>
                        Ride accepted successfully!
                    </div>
                `;
                document.body.appendChild(notification);
                setTimeout(() => {
                    notification.remove();
                }, 3000);
            });
            
            declineBtn.addEventListener('click', function() {
                hideRideRequest();
            });
            
            // Initialize
            toggleStatus();
        });
    </script>
</body>
</html>
