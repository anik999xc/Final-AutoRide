                            <div class="stat-label">Rating</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="stat-value">95%</div>
                            <div class="stat-label">Acceptance</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-route"></i>
                            </div>
                            <div class="stat-value" id="total-trips">142</div>
                            <div class="stat-label">Total Trips</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="stat-value" id="online-hours">0h</div>
                            <div class="stat-label">Online Today</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Go Online Prompt -->
            <div id="offline-prompt" class="dashboard-card p-8 text-center">
                <div class="text-6xl mb-6 text-gray-300">
                    <i class="fas fa-power-off"></i>
                </div>
                <h2 class="text-2xl font-bold text-gray-800 mb-4">You're Currently Offline</h2>
