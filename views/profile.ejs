            function openEditModal(field, title) {
            currentField = field;
            const modal = document.getElementById('editModal');
            const modalTitle = document.getElementById('modalTitle');
            const modalInput = document.getElementById('modalInput');
            
            modalTitle.textContent = `Edit ${title}`;
            
            // Set current value in input
            if (field === 'userName') {
                modalInput.value = document.getElementById('userName').textContent;
            } else if (field === 'address') {
                modalInput.value = document.getElementById('useraddress').textContent;
            } else if (field === 'emergency') {
                modalInput.value = document.getElementById('emergency_number').textContent;
            }
            
            // Show modal with animation
            modal.classList.add('active');
            setTimeout(() => {
                modalInput.focus();
            }, 300);
        }

        function closeModal() {
            const modal = document.getElementById('editModal');
            modal.classList.remove('active');
        }

        async function saveChanges() {
            const modalInput = document.getElementById('modalInput');
            const newValue = modalInput.value.trim();
            
            if (!newValue) return;
            
            try {
                let updateData = {};
                let elementId;
                
                // Determine which field to update
                if (currentField === 'userName') {
                    updateData = { name: newValue };
                    elementId = 'userName';
                } else if (currentField === 'address') {
                    updateData = { address: newValue };
                    elementId = 'useraddress';
                } else if (currentField === 'emergency') {
                    updateData = { emergency_number: newValue };
                    elementId = 'emergency_number';
                }
                
                // Update in Supabase
                const { error } = await supabaseClient
                    .from('users')
                    .update(updateData)
                    .eq('auth_key', currentAuthKey);
                
                if (error) {
                    console.error('Error updating data:', error);
                    return;
                }
                
                // Update UI
                document.getElementById(elementId).textContent = newValue;
                
                // Close modal
                closeModal();
                
                // Show success feedback
                showFeedback('Successfully updated!');
                
            } catch (error) {
                console.error('Error:', error);
            }
        }
        
        function showFeedback(message) {
            // Create feedback element
            const feedback = document.createElement('div');
            feedback.style.position = 'fixed';
            feedback.style.bottom = '20px';
            feedback.style.left = '50%';
            feedback.style.transform = 'translateX(-50%)';
            feedback.style.background = 'linear-gradient(135deg, #10B981, #059669)';
            feedback.style.color = 'white';
            feedback.style.padding = '12px 24px';
            feedback.style.borderRadius = '8px';
            feedback.style.boxShadow = '0 4px 6px -1px rgba(0, 0, 0, 0.1)';
            feedback.style.zIndex = '9999';
            feedback.style.fontWeight = '500';
            feedback.innerHTML = `<i class="fas fa-check-circle mr-2"></i> ${message}`;
            
            // Add to body
            document.body.appendChild(feedback);
            
            // Remove after 3 seconds
            setTimeout(() => {
                feedback.style.opacity = '0';
                feedback.style.transition = 'opacity 0.5s ease';
                setTimeout(() => {
                    document.body.removeChild(feedback);
                }, 500);
            }, 3000);
        }
