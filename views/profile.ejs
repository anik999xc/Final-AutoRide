<script>
    // ১. সার্ভার থেকে আসা এনভায়রনমেন্ট ভেরিয়েবল গ্রহণ (env থেকে)
    const { 
        SUPABASE_URL, 
        SUPABASE_KEY 
    } = <%- JSON.stringify(env) %>;

    let supabaseClient;
    let currentAuthKey;
    let currentField;

    document.addEventListener('DOMContentLoaded', async function() {
        // ২. Supabase client তৈরি (সার্ভার থেকে আসা কী ব্যবহার করে)
        supabaseClient = supabase.createClient(SUPABASE_URL, SUPABASE_KEY);
        
        // Local storage থেকে auth key নেওয়া
        currentAuthKey = localStorage.getItem('authKey');
        
        if (currentAuthKey) {
            // ইউজারের তথ্য লোড করা
            await loadUserData();
            
            // ইমেজ হ্যান্ডলার সেটআপ (যদি থাকে)
            if (typeof setupImageHandlers === 'function') {
                setupImageHandlers();
            }
        } else {
            // যদি লগইন না থাকে তবে লগইন পেজে পাঠিয়ে দেওয়া
            window.location.href = '/login';
        }
        
        // iOS এবং মোডাল ফিক্স ফাংশন কল
        fixIOSViewportHeight();
        setupModalTouchHandling();
    });

    // ইউজারের তথ্য লোড করার ফাংশন
    async function loadUserData() {
        try {
            // ৩. ডাটাবেস থেকে তথ্য আনা (আপনার নতুন কলাম অনুযায়ী)
            const { data, error } = await supabaseClient
                .from('users')
                .select('name, address, emergency_number, email')
                .eq('auth_key', currentAuthKey)
                .single();
            
            if (error) {
                console.error('Supabase error:', error);
                return;
            }
            
            // UI আপডেট করা
            if (data) {
                if (data.name) document.getElementById('userName').textContent = data.name;
                if (data.address) document.getElementById('useraddress').textContent = data.address;
                if (data.emergency_number) document.getElementById('emergency_number').textContent = data.emergency_number;
                if (data.email) document.getElementById('email').textContent = data.email;
            }
        } catch (error) {
            console.error('Error fetching user data:', error);
        }
    }

    // iOS ভিউপোর্ট ফিক্স
    function fixIOSViewportHeight() {
        const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent) && !window.MSStream;
        if (isIOS) {
            document.documentElement.style.setProperty('--vh', `${window.innerHeight * 0.01}px`);
            window.addEventListener('resize', () => {
                document.documentElement.style.setProperty('--vh', `${window.innerHeight * 0.01}px`);
            });
        }
    }
    
    // মোডাল টাচ হ্যান্ডলিং
    function setupModalTouchHandling() {
        const modal = document.getElementById('editModal');
        if (!modal) return;
        
        const modalContent = modal.querySelector('.modal-content');
        
        if (modalContent) {
            modalContent.addEventListener('touchmove', function(e) {
                e.stopPropagation();
            });
        }
        
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                if (typeof closeModal === 'function') closeModal();
            }
        });
    }
