            --transition: all 0.3s ease;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-tap-highlight-color: transparent;
        }
        
        html, body {
            width: 100%;
            height: 100%;
            overflow-x: hidden;
            position: fixed;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--background-color);
            color: var(--text-primary);
            display: flex;
            flex-direction: column;
            overflow-y: auto;
            position: relative;
            overscroll-behavior-y: none;
            -webkit-overflow-scrolling: touch;
        }
        
        .profile-container {
            width: 100%;
            height: auto;
            min-height: 100%;
            background-color: var(--card-color);
            overflow: hidden;
            position: relative;
            display: flex;
            flex-direction: column;
            flex: 1;
        }
        
        .cover-image-container {
            position: relative;
            height: 180px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            overflow: hidden;
        }
        
        .cover-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }
        
        .profile-image-container {
            position: relative;
            width: 130px;
            height: 130px;
            margin: -65px auto 0;
            border-radius: 50%;
            border: 4px solid var(--card-color);
            background-color: var(--card-color);
            overflow: hidden;
            z-index: 10;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }
        
        .profile-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }
        
        .upload-icon {
            position: absolute;
            bottom: 5px;
            right: 5px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            width: 36px;
            height: 36px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            cursor: pointer;
            z-index: 20;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transition: var(--transition);
        }
        
        .upload-icon:hover, .upload-icon:active {
            transform: scale(1.05);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.2);
        }
        
        .user-details {
            padding: 25px 20px;
            flex: 1;
            overflow-y: auto;
        }
        
        .detail-row {
            margin-bottom: 20px;
            position: relative;
            transition: var(--transition);
        }
        
        .detail-label {
            font-size: 14px;
            font-weight: 600;
            color: var(--text-secondary);
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
        
        .detail-value {
            background-color: #F9FAFB;
            padding: 16px;
            border-radius: 12px;
            font-size: 16px;
            color: var(--text-primary);
            transition: var(--transition);
            border: 1px solid #E5E7EB;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .detail-value span {
            flex: 1;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        .detail-row:active .detail-value {
            border-color: #D1D5DB;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        
        .edit-btn {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
