        const uploadProgress = document.getElementById('uploadProgress');
        const uploadStatus = document.getElementById('uploadStatus');

        // Get auth key from local storage
        const getAuthKey = () => {
            const authKey = localStorage.getItem('authKey');
            if (!authKey) {
                console.error('Auth key not found in local storage');
                return null;
            }
            return authKey;
        };

        // Load images on page load
        const loadImages = () => {
            const authKey = getAuthKey();
            if (!authKey) return;

            // Check if profile image exists
            const profileImageUrl = `/uploads/profile/${authKey}-profile.jpg`;
            fetch(profileImageUrl, { method: 'HEAD' })
                .then(response => {
                    if (response.ok) {
                        profileImg.src = profileImageUrl + '?t=' + new Date().getTime();
                        profileImg.style.display = 'block';
                        profilePlaceholder.style.display = 'none';
                    }
                })
                .catch(error => console.error('Error checking profile image:', error));

            // Check if cover image exists
            const coverImageUrl = `/uploads/cover/${authKey}-cover.jpg`;
            fetch(coverImageUrl, { method: 'HEAD' })
                .then(response => {
                    if (response.ok) {
                        coverImg.src = coverImageUrl + '?t=' + new Date().getTime();
                        coverImg.style.display = 'block';
                        coverPlaceholder.style.display = 'none';
                    }
                })
                .catch(error => console.error('Error checking cover image:', error));
        };

        // Call loadImages on page load
        loadImages();

        // Validate file before upload
        const validateFile = (file, errorElement) => {
            errorElement.style.display = 'none';
            const fileName = file.name.toLowerCase();
            const validExt = ['.jpg', '.jpeg'];
            const fileExt = fileName.substring(fileName.lastIndexOf('.'));

            if (!validExt.includes(fileExt)) {
                errorElement.textContent = 'Error: Only JPG/JPEG files are allowed.';
                errorElement.style.display = 'block';
                return false;
            }

            if (file.size > 5 * 1024 * 1024) {
                errorElement.textContent = 'Error: Maximum image size is 5MB.';
                errorElement.style.display = 'block';
                return false;
            }

            return true;
        };

        // Upload file
        const uploadFile = (file, fileType) => {
            const authKey = getAuthKey();
            if (!authKey) {
                alert('Authentication error. Please log in again.');
                return;
            }

            uploadProgress.style.display = 'block';
            uploadStatus.style.display = 'block';
            uploadStatus.textContent = 'Uploading image...';

            const formData = new FormData();
            formData.append(fileType, file);
