<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings - Theme Switcher</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #6366f1;
            --text-primary-light: #1f2937;
            --text-secondary-light: #4b5563;
            --bg-primary-light: #ffffff;
            --bg-secondary-light: #f3f4f6;
            --border-light: #e5e7eb;
            
            --text-primary-dark: #f9fafb;
            --text-secondary-dark: #d1d5db;
            --bg-primary-dark: #111827;
            --bg-secondary-dark: #1f2937;
            --border-dark: #374151;
        }

        body {
            font-family: 'Inter', sans-serif;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        body.light {
            color: var(--text-primary-light);
            background-color: var(--bg-primary-light);
        }

        body.dark {
            color: var(--text-primary-dark);
            background-color: var(--bg-primary-dark);
        }

        .light .settings-container {
            background-color: var(--bg-secondary-light);
            border-color: var(--border-light);
        }

        .dark .settings-container {
            background-color: var(--bg-secondary-dark);
            border-color: var(--border-dark);
        }

        .light .settings-header {
            border-color: var(--border-light);
        }

        .dark .settings-header {
            border-color: var(--border-dark);
        }

        .light .theme-option {
            background-color: var(--bg-primary-light);
            border-color: var(--border-light);
        }

        .dark .theme-option {
            background-color: var(--bg-secondary-dark);
            border-color: var(--border-dark);
        }

        .theme-option.active {
            border-color: var(--primary-color);
        }

        .theme-option {
            transition: all 0.2s ease;
        }

        .theme-option:hover {
            transform: translateY(-2px);
        }

        .switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .slider {
            background-color: var(--primary-color);
        }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            padding: 1rem;
            text-align: center;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .light .footer {
            background-color: var(--bg-secondary-light);
            color: var(--text-secondary-light);
            border-top: 1px solid var(--border-light);
        }

        .dark .footer {
            background-color: var(--bg-secondary-dark);
            color: var(--text-secondary-dark);
            border-top: 1px solid var(--border-dark);
        }

        .theme-preview-light {
            background: linear-gradient(135deg, #f3f4f6 0%, #ffffff 100%);
        }

        .theme-preview-dark {
            background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
        }

        .toast {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 1rem;
            border-radius: 0.5rem;
            background-color: var(--primary-color);
            color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transform: translateY(-100px);
            opacity: 0;
            transition: transform 0.3s ease, opacity 0.3s ease;
            z-index: 1000;
        }

        .toast.show {
            transform: translateY(0);
            opacity: 1;
        }
    </style>
</head>
<body class="light">
    <div id="toast" class="toast">
        Theme saved! Changes will apply to all pages.
    </div>
<nav class="py-4 px-6 flex justify-between items-center border-b light:border-gray-200 dark:border-gray-700">
  <div class="text-2xl font-bold">
    <button onclick="history.back()">
      <i class="fas fa-arrow-left mr-2"></i> Back
    </button>
  </div>
  <div class="flex items-center space-x-4">
    <label class="switch">
      <input type="checkbox" id="theme-toggle">
      <span class="slider"></span>
    </label>
    <span id="theme-label">Light Mode</span>
  </div>
</nav>
    <div class="container mx-auto px-4 py-8">
        <div class="settings-container max-w-3xl mx-auto rounded-lg border p-6 shadow-md">
            <div class="settings-header border-b pb-4 mb-6">
                <h2 class="text-xl font-semibold">Appearance</h2>
                <p class="text-sm mt-1 light:text-gray-500 dark:text-gray-400">Customize how your app looks and feels</p>
            </div>

            <div class="mb-8">
                <h3 class="text-lg font-medium mb-4">Theme</h3>
                <div class="flex flex-col md:flex-row space-y-4 md:space-y-0 md:space-x-4">
                    <div id="light-option" class="theme-option flex-1 p-4 border rounded-lg cursor-pointer active">
                        <div class="theme-preview-light h-24 rounded-md mb-3 flex items-center justify-center">
                            <i class="fas fa-sun text-yellow-500 text-2xl"></i>
                        </div>
                        <div class="flex items-center">
                            <div class="ml-2">
                                <h4 class="font-medium">Light</h4>
                                <p class="text-sm light:text-gray-500 dark:text-gray-400">Classic, bright appearance</p>
                            </div>
                        </div>
                    </div>

                    <div id="dark-option" class="theme-option flex-1 p-4 border rounded-lg cursor-pointer">
                        <div class="theme-preview-dark h-24 rounded-md mb-3 flex items-center justify-center">
                            <i class="fas fa-moon text-blue-300 text-2xl"></i>
                        </div>
                        <div class="flex items-center">
                            <div class="ml-2">
                                <h4 class="font-medium">Dark</h4>
                                <p class="text-sm light:text-gray-500 dark:text-gray-400">Easier on the eyes in low light</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex justify-center mt-8">
                <button id="save-settings" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-md transition duration-200 font-medium flex items-center">
                    <i class="fas fa-save mr-2"></i> Save Preferences
                </button>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="text-sm">
            App Version 01.01.01
        </div>
    </footer>

    <script>
        // Get DOM elements
        const body = document.body;
        const themeToggle = document.getElementById('theme-toggle');
        const themeLabel = document.getElementById('theme-label');
        const lightOption = document.getElementById('light-option');
        const darkOption = document.getElementById('dark-option');
        const saveButton = document.getElementById('save-settings');
        const toast = document.getElementById('toast');

        // Initialize theme from localStorage
        function initTheme() {
            const savedTheme = localStorage.getItem('theme') || 'light';
            setTheme(savedTheme);
            themeToggle.checked = savedTheme === 'dark';
            updateThemeLabel();
            updateActiveOption();
        }

        // Set theme
        function setTheme(theme) {
            if (theme === 'dark') {
                body.classList.remove('light');
                body.classList.add('dark');
            } else {
                body.classList.remove('dark');
                body.classList.add('light');
            }
        }

        // Update theme label based on current theme
        function updateThemeLabel() {
            themeLabel.textContent = body.classList.contains('dark') ? 'Dark Mode' : 'Light Mode';
        }

        // Update which theme option is active
        function updateActiveOption() {
            if (body.classList.contains('dark')) {
                darkOption.classList.add('active');
                lightOption.classList.remove('active');
            } else {
                lightOption.classList.add('active');
                darkOption.classList.remove('active');
            }
        }

        // Toggle theme when switch is clicked
        themeToggle.addEventListener('change', function() {
            const newTheme = this.checked ? 'dark' : 'light';
            setTheme(newTheme);
            updateThemeLabel();
            updateActiveOption();
        });

        // Set theme when option cards are clicked
        lightOption.addEventListener('click', function() {
            setTheme('light');
            themeToggle.checked = false;
            updateThemeLabel();
            updateActiveOption();
        });

        darkOption.addEventListener('click', function() {
            setTheme('dark');
            themeToggle.checked = true;
            updateThemeLabel();
            updateActiveOption();
        });

        // Save theme preference to localStorage
        saveButton.addEventListener('click', function() {
            const currentTheme = body.classList.contains('dark') ? 'dark' : 'light';
            localStorage.setItem('theme', currentTheme);
            
            // Show toast notification
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        });

        // Initialize theme on page load
        document.addEventListener('DOMContentLoaded', initTheme);
    </script>
</body>
</html>
