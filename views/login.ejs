<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="application/ld+json">
    {
        "@context": "http://schema.org",
        "@type": "Organization",
        "url": "https://autoride.space",
        "logo": "https://autoride.space/img/logo.jpg"
    }
    </script>
    <title>Login - AutoRide</title>
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#4F46E5" />

    <!-- Service Worker registration -->
    <script>
    if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js')
        .then(() => {
            console.log('Service Worker registered successfully.');
        })
        .catch((err) => {
            console.error('Service Worker registration failed:', err);
        });
    }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary: #4F46E5;
            --primary-dark: #4338CA;
            --secondary: #10B981;
            --secondary-hover: #059669;
            --text-primary: #1F2937;
            --text-secondary: #4B5563;
            --bg-light: #F9FAFB;
            --border-color: #E5E7EB;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #EEF2FF, #F3F4F6);
            min-height: 100vh;
            color: var(--text-primary);
        }
        
        .container {
            max-width: 480px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
        }
        
        .logo-container {
            text-align: center;
            margin-bottom: 1.5rem;
        }
        
        .logo {
            height: 60px;
            margin: 0 auto;
        }
        
        .card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(79, 70, 229, 0.1);
            padding: 2rem;
            transition: all 0.3s ease;
        }
        
        .card-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .card-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.5rem;
        }
        
        .card-subtitle {
            font-size: 1rem;
            color: var(--text-secondary);
        }
        
        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }
        
        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: var(--text-primary);
        }
        
        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            padding-left: 2.5rem;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.2s;
            background-color: var(--bg-light);
        }
        
        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.15);
            outline: none;
        }
        
        .input-icon {
            position: absolute;
            left: 1rem;
            top: 2.4rem;
            color: #9CA3AF;
        }
        
        .btn {
            display: block;
            width: 100%;
            padding: 0.75rem;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            text-align: center;
        }
        
        .btn-primary {
            background-color: var(--primary);
            color: white;
        }
        
        .btn-primary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-1px);
        }
        
        .btn-secondary {
            background-color: var(--secondary);
            color: white;
        }
        
        .btn-secondary:hover {
            background-color: var(--secondary-hover);
            transform: translateY(-1px);
        }
        
        .btn:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }
        
        .divider {
            display: flex;
            align-items: center;
            margin: 1.5rem 0;
            color: var(--text-secondary);
        }
        
        .divider::before, .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid var(--border-color);
        }
        
        .divider::before {
            margin-right: 0.5rem;
        }
        
        .divider::after {
            margin-left: 0.5rem;
        }
        
        .timer {
            text-align: center;
            font-size: 0.875rem;
            color: var(--text-secondary);
            margin-top: 0.75rem;
            margin-bottom: 1.5rem;
        }
        
        .form-footer {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.875rem;
            color: var(--text-secondary);
        }
        
        .form-footer a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
        }
        
        .form-footer a:hover {
            text-decoration: underline;
        }
        
        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(79, 70, 229, 0.4); }
            70% { box-shadow: 0 0 0 10px rgba(79, 70, 229, 0); }
            100% { box-shadow: 0 0 0 0 rgba(79, 70, 229, 0); }
        }
        
        .pulse {
            animation: pulse 1.5s infinite;
        }
        
        @media (max-width: 640px) {
            .container {
                padding: 1.5rem 1rem;
            }
            
            .card {
                padding: 1.5rem;
            }
            
            .card-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo-container">
            <img src="https://placehold.co/200x60?text=AutoRide" alt="AutoRide Logo" class="logo">
        </div>
        
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Welcome Back</h1>
                <p class="card-subtitle">Log in to access your AutoRide account</p>
            </div>
            
            <form id="loginForm">
                <div class="form-group">
                    <label for="email" class="form-label">Email Address</label>
                    <i class="fas fa-envelope input-icon"></i>
                    <input type="email" id="email" name="email" required class="form-control" placeholder="Enter your email">
                </div>
                
                <button type="button" id="sendOtpBtn" class="btn btn-primary">
                    <i class="fas fa-paper-plane mr-2"></i> Send Verification Code
                </button>
                
                <div class="form-group" id="otpInputDiv" style="display: none;">
                    <div class="divider">Verification</div>
                    <label for="otp" class="form-label">Enter OTP Code</label>
                    <i class="fas fa-lock input-icon"></i>
                    <input type="text" id="otp" name="otp" class="form-control pulse" placeholder="Enter 6-digit code">
                </div>
                
                <div id="timerDisplay" class="timer" style="display: none;"></div>
                
                <button type="submit" id="loginBtn" class="btn btn-secondary" style="display: none;">
                    <i class="fas fa-sign-in-alt mr-2"></i> Login
                </button>
                
                <div class="form-footer">
                    Don't have an account yet? <a href="/register">Register here</a>
                </div>
            </form>
        </div>
    </div>

    <script type="module">
        // EmailJS initialization (VERY INSECURE!  FOR DEVELOPMENT ONLY, AND EVEN THEN, PREFER A SERVER)
        emailjs.init({
            publicKey: 'Fak1n43FGudoNISD3'
        });

        // Import Supabase
        import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js/+esm';

        // Supabase config
        const SUPABASE_URL = 'https://edboiyrmhpbihsuwccxk.supabase.co';
        const SUPABASE_KEY = 'sb_publishable_EpE2CALYA4av_iugcbElnA_KIvEP2V-';
        const supabase = createClient(SUPABASE_URL, SUPABASE_KEY);

        // Redirect to home if already logged in
        if (localStorage.getItem('authKey')) {
            window.location.href = '/home';
        }

        // Select elements
        const emailInput = document.getElementById('email');
        const sendOtpBtn = document.getElementById('sendOtpBtn');
        const loginForm = document.getElementById('loginForm');
        const loginBtn = document.getElementById('loginBtn');
        const otpInputDiv = document.getElementById('otpInputDiv');
        const otpInput = document.getElementById('otp');
        const timerDisplay = document.getElementById('timerDisplay');

        let realOtp = null;
        let timer = null;

        // Email validation
        function isValidEmail(email) {
            return /\S+@\S+\.\S+/.test(email);
        }

        // Send OTP function
        sendOtpBtn.addEventListener('click', async () => {
            const email = emailInput.value.trim();

            if (!email) {
                alert('Please enter your email address.');
                return;
            }

            if (!isValidEmail(email)) {
                alert('Please enter a valid email address.');
                return;
            }

            // Check if the email exists in Supabase
            const { data, error } = await supabase
                .from('users')
                .select('email')
                .eq('email', email);

            if (error) {
                alert('Error checking email.');
                console.error('Supabase error:', error);
                return;
            }

            if (data.length === 0) {
                alert('Account not found. Please register.');
                window.location.href = '/register'; // Redirect to register page
                return;
            }

            // Generate 6-digit OTP
            realOtp = Math.floor(100000 + Math.random() * 900000).toString();

            // Send OTP via EmailJS
            try {
                const response = await emailjs.send('service_pqj8mqx', 'template_f9xekrr', {
                    to_email: email,
                    email: email,
                    to_name: 'User', // You might want to fetch the user's name if available
                    from_name: "Login System",
                    recipient: email,
                    passcode: realOtp,
                }, 'Fak1n43FGudoNISD3');

                console.log('OTP sent successfully:', response);
                alert('OTP sent to your email.');

                // Disable email input and send OTP button, enable OTP input and login button
                emailInput.disabled = true;
                sendOtpBtn.style.display = 'none';
                otpInputDiv.style.display = 'block';
                loginBtn.style.display = 'block';
                otpInput.focus();
                timerDisplay.style.display = 'block';

                let countdown = 180;
                timerDisplay.textContent = `OTP will expire in ${countdown} seconds`;

                timer = setInterval(() => {
                    countdown--;
                    if (countdown <= 0) {
                        clearInterval(timer);
                        emailInput.disabled = false;
                        sendOtpBtn.style.display = 'block';
                        otpInputDiv.style.display = 'none';
                        loginBtn.style.display = 'none';
                        timerDisplay.style.display = 'none';
                        alert('OTP expired. Please resend.');
                    } else {
                        timerDisplay.textContent = `OTP will expire in ${countdown} seconds`;
                    }
                }, 1000);

            } catch (error) {
                alert('Failed to send OTP. Please check console for details.');
                console.error('EmailJS error:', error);
                return;
            }
        });

        // Login function
        loginForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            const otp = otpInput.value.trim();
            const email = emailInput.value.trim();

            if (!otp) {
                alert('Please enter the OTP.');
                return;
            }

            if (otp !== realOtp) {
                alert('Invalid OTP.');
                return;
            }

            // Fetch user data to get the auth_key
            const { data, error } = await supabase
                .from('users')
                .select('auth_key')
                .eq('email', email)
                .single(); // Assuming each email has only one user

            if (error) {
                alert('Login failed. Could not verify user.');
                console.error('Supabase error:', error);
                return;
            }

            if (data && data.auth_key) {
                localStorage.setItem('authKey', data.auth_key);
                alert('Login successful!');
                window.location.href = '/home'; // Redirect to home page
            } else {
                alert('Login failed. Could not retrieve authentication key.');
            }
        });
    </script>
    
    <% if (typeof loadingScreen !== "undefined") { %>
    <%- loadingCss %>
    <%- loadingScreen %>
    <%- loadingJs %>
    <% } %>
</body>
</html>
