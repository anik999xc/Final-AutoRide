  <script>
    function show(el) {el.classList.remove('hidden');}
    function hide(el) {el.classList.add('hidden');}
    function animateIn(el,className='translate-x-0'){el.classList.remove('-translate-x-full');el.classList.add(className);}
    function animateOut(el){el.classList.add('-translate-x-full');el.classList.remove('translate-x-0');}

    const menuBtn = document.getElementById('menuBtn');
    const sideMenu = document.getElementById('sideMenu');
    const sideMenuBackdrop = document.getElementById('sideMenuBackdrop');
    document.getElementById('sideMenuClose').onclick = closeMenu;
    menuBtn.onclick = openMenu;
    sideMenuBackdrop.onclick = closeMenu;
    function openMenu() {
      sideMenu.classList.remove('-translate-x-full');
      sideMenu.classList.add('translate-x-0');
      show(sideMenuBackdrop);
      document.body.style.overflowY='hidden';
    }
    function closeMenu() {
      animateOut(sideMenu);
      hide(sideMenuBackdrop);
      document.body.style.overflowY='';
    }

    const notifBtn = document.getElementById('notifBtn');
    const notifPanel = document.getElementById('notifPanel');
    const notifCloseBtn = document.getElementById('notifCloseBtn');
        notifBtn.onclick = () => { show(notifPanel); };
    notifCloseBtn.onclick = () => { hide(notifPanel); };

    /* Location Detection Fixes */
    const pickupInput = document.getElementById('pickupInput');
    const setCurrentBtn = document.getElementById('setCurrentBtn');
    const dropoffInput = document.getElementById('dropoffInput');
    const dropoffSuggest = document.getElementById('dropoffSuggest');
    const LOCATIONIQ_API_KEY = 'pk.b8d8d41e1d6dc5b30e37b1d668451f4a';
    
    // Initial location detection on page load
    detectCurrentLocation();
    
    // Detect current location function
    function detectCurrentLocation() {
      pickupInput.value = "Detecting your location...";
      
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(
          (position) => {
            // Get address from coordinates using reverse geocoding
            const lat = position.coords.latitude;
            const lon = position.coords.longitude;
            
            fetch(`https://us1.locationiq.com/v1/reverse.php?key=${LOCATIONIQ_API_KEY}&lat=${lat}&lon=${lon}&format=json`)
              .then(response => response.json())
              .then(data => {
                if (data && data.display_name) {
                  // Format address for display (shorter version)
                  const addressParts = data.display_name.split(', ');
                  const shortenedAddress = addressParts.slice(0, 3).join(', ');
                  pickupInput.value = shortenedAddress;
                } else {
                  pickupInput.value = "Location found but address unavailable";
                }
              })
              .catch(err => {
                console.error("Error in reverse geocoding:", err);
                pickupInput.value = "Unable to get address";
              });
          },
          (error) => {
            console.error("Geolocation error:", error);
            switch(error.code) {
              case error.PERMISSION_DENIED:
                pickupInput.value = "Location access denied";
                break;
              case error.POSITION_UNAVAILABLE:
                pickupInput.value = "Location unavailable";
                break;
              case error.TIMEOUT:
                pickupInput.value = "Location request timed out";
                break;
              default:
                pickupInput.value = "Unable to detect location";
            }
          },
          {
            enableHighAccuracy: true,
            timeout: 10000,
            maximumAge: 0
          }
        );
      } else {
        pickupInput.value = "Geolocation not supported by browser";
      }
    }
    
    // Set current location button click handler
    setCurrentBtn.addEventListener('click', detectCurrentLocation);
    
    // Location suggestions for dropoff input
    let searchTimeout;
    
    dropoffInput.addEventListener('input', function() {
      clearTimeout(searchTimeout);
      
      if (this.value.length < 3) {
        hide(dropoffSuggest);
        return;
      }
      
      searchTimeout = setTimeout(() => {
        const query = this.value;
        
        fetch(`https://api.locationiq.com/v1/autocomplete.php?key=${LOCATIONIQ_API_KEY}&q=${encodeURIComponent(query)}&limit=5&dedupe=1&tag=place:city,place:town,place:village,place:suburb`)
          .then(response => response.json())
          .then(data => {
            dropoffSuggest.innerHTML = '';
            
            if (Array.isArray(data) && data.length > 0) {
              data.forEach(place => {
                const div = document.createElement('div');
                div.className = 'input-suggest-item';
                
                // Create display name (format it nicer)
                let displayName;
                if (place.address) {
                  const parts = [];
                  if (place.address.name) parts.push(place.address.name);
                  if (place.address.road) parts.push(place.address.road);
                  if (place.address.suburb) parts.push(place.address.suburb);
                  if (place.address.city) parts.push(place.address.city);
                  if (place.address.state) parts.push(place.address.state);
                  displayName = parts.join(', ');
                } else {
                  displayName = place.display_name || place.display_place || 'Unknown location';
                }
                
                div.innerHTML = `
                  <div class="font-medium">${displayName}</div>
                  <div class="text-xs text-gray-400">${place.display_place || ''}</div>
                `;
                
                div.addEventListener('click', () => {
                  dropoffInput.value = displayName;
                  hide(dropoffSuggest);
                });
                
                dropoffSuggest.appendChild(div);
              });
              
              show(dropoffSuggest);
            } else {
              hide(dropoffSuggest);
            }
          })
          .catch(err => {
            console.error("Error fetching suggestions:", err);
            hide(dropoffSuggest);
          });
      }, 300);
    });
    
    // Hide suggestions when clicking outside
    document.addEventListener('click', function(event) {
      if (!dropoffInput.contains(event.target) && !dropoffSuggest.contains(event.target)) {
        hide(dropoffSuggest);
      }
    });
    
    // Ride Now button handler
    const rideNowBtn = document.getElementById('rideNowBtn');
    rideNowBtn.addEventListener('click', function() {
      // Simple validation
      if (!pickupInput.value || pickupInput.value.includes('Unable') || pickupInput.value.includes('Detecting')) {
        
        window.location.href = '/passenger_map';
      }
      
      if (!dropoffInput.value) {
        alert('Please enter your destination');
        return;
      }
      
      alert('After that, you can easily set your pick-up and drop-off location from the map.');
      window.location.href = '/passenger_map';
    });

    // Logout button handler
    document.getElementById('logoutBtn').addEventListener('click', function() {
      // Remove user details from local storage
      localStorage.removeItem('authKey');
      
      // You can also clear other user-related items if needed
      // Example: localStorage.removeItem('userPreferences');
      
      // Redirect to login page
      window.location.href = '/login';
    });

    (function() {
      const authKey = localStorage.getItem('authKey');
      const currentPage = window.location.pathname;
      const loginPagePath = '/login'; // আপনার লগইন পেজের পাথ এখানে দিন (যেমন: '/login.html')

      // যদি authKey না থাকে এবং ব্যবহারকারী লগইন পেজে না থাকে,
      // তাহলে লগইন পেজে রিডাইরেক্ট করুন
      if (!authKey && currentPage !== loginPagePath) {
          window.location.href = loginPagePath;
      }
    })();
  </script>
